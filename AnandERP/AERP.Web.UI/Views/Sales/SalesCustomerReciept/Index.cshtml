@model AERP.ViewModel.SalesCustomerRecieptViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    .mfp-content {
        width: 70%;
    }
</style>
<script src="@Url.Content("~/Scripts/AERP_Scripts/Sales/SalesCustomerReciept.js")" type="text/javascript"></script>
<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Manage Customer Reciept</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-header">
            <ul class="actions">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown" title="Add New">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            <a class="mfpAjaxModal" href="@Url.Action("Create", "SalesCustomerReciept")">
                                <i class="zmdi zmdi-plus-square"></i> &nbsp; @Resources.DisplayName_AddNew
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="card-body card-padding">
            <form class="row" role="form">
                <div class="col-sm-4">
                    Transaction From Date
                    <div class="form-group fg-line">
                        @Html.TextBoxFor(model => model.TransactionFromDate, new { @class = "form-control input-sm " })
                    </div>
                </div>
                <div class="col-sm-4">
                    Transaction Upto Date
                    <div class="form-group fg-line">
                        @Html.TextBoxFor(model => model.TransactionUptoDate, new { @class = "form-control input-sm " })
                    </div>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" id="btnShowListforList">@Resources.GlobalProperties_ShowList</button>
                </div>
            </form>
        </div>
    </div>

    <div id="ListViewModel"> </div>
</div>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {

        SalesCustomerReciept.Initialize();

        $('#TransactionFromDate').datetimepicker({
            format: 'DD MMM YYYY',
            maxDate: moment(),
            ignoreReadonly: true,
        })

        $('#TransactionUptoDate').datetimepicker({
            format: 'DD MMM YYYY',
            maxDate: moment(),
            ignoreReadonly: true,
        })
    });
</script>
