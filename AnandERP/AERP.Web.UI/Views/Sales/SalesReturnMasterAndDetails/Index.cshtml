@model AERP.ViewModel.SalesReturnMasterAndDetailsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .mfp-content {
        width: 70%;
    }
</style>
<script src="~/Content/Theme/vendors/bower_components/typeahead.js/dist/typeahead.jquery.js"></script>
<script src="@Url.Content("~/Scripts/AERP_Scripts/Sales/SalesReturnMasterAndDetails.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Sales Return</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-header">
            <ul class="actions">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown" title="Add New">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            <a class="mfpAjaxModal" href="@Url.Action("Create", "SalesReturnMasterAndDetails")">
                                <i class="zmdi zmdi-plus-square"></i> &nbsp; @Resources.DisplayName_AddNew
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="card-body card-padding">
            <div class="row">
                <div class="col-sm-4">
                    Customer
                    <div class="form-group fg-line ">
                        @Html.HiddenFor(m => m.CustomerMasterID)
                        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control input-sm typeahead" })
                    </div>
                </div>

                <div class="col-sm-4">
                    Transaction Date
                    <div class="form-group fg-line">
                        @Html.TextBoxFor(model => model.TransactionDate, new { @class = "form-control input-sm " })
                    </div>
                </div>

                <div class="col-sm-3">
                    Location
                    <div class="form-group fg-line">
                        @Html.DropDownList("GeneralLocationList", ViewData["GeneralLocationList"] as List<SelectListItem>, "---Select Location ---", new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="col-sm-1" style="margin-top:10px;">
                    <button type="button" class="btn btn-primary" id="btnShowListforList">@Resources.GlobalProperties_ShowList</button>
                </div>
            </div>
        </div>
    </div>
    <div id="ListViewModel"> </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        SalesReturnMasterAndDetails.Initialize();
    });
</script>