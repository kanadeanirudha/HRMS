@model AERP.ViewModel.SalesOrderDeliveryMasterAndDetailsViewModel
<style>
    .mfp-content {
        width: 50% !important;
    }
</style>

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;Download Delivery Memo</h2>
    </div>

    <div class="card">
 @using (Html.BeginForm("download", "SalesOrderDeliveryMasterAndDetails", FormMethod.Post, new {}))
 {
        <form id="FormCreateSaleContractRecieptMaster" method="post">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="SectionErrorMessage"></p>
            </div>
            <div class="card-body card-padding">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group" style="padding-top: 1%;">
                            @Html.HiddenFor(model => model.SalesOrderDeliveryMasterID)
                            @Html.HiddenFor(model => model.SalesOrderMasterID)
                            @Html.LabelFor(model => model.WithDMRate, new { style = "" }) &nbsp;

                            <label class="radio radio-inline m-r-10">
                                @Html.RadioButtonFor(model => model.WithDMRate, 1, new { @checked = true,value="1" })&nbsp;With Rate DM &nbsp;&nbsp;&nbsp;
                                <i class="input-helper"></i>
                            </label>

                            <label class="radio radio-inline m-r-10">
                                @Html.RadioButtonFor(model => model.WithDMRate, 2, new { value="2" })&nbsp;Without Rate DM
                                <i class="input-helper"></i>
                            </label>
                            <label class="radio radio-inline m-r-10">
                                @Html.RadioButtonFor(model => model.WithDMRate, 3, new { value = "3" })&nbsp;Without Taxes
                                <i class="input-helper"></i>
                            </label>
                        </div>
                    </div>
                </div>
                
                <div class="form-group" style="margin-right:800px;">
                    <button class="btn bgm-bluegray btn-sm m-t-10 waves-effect" style="margin-left:3%;" id="CreateDownloadDM" type="button" onclick="this.form.submit(); $.magnificPopup.close();">@Resources.ButtonAction_Submit</button>
                </div>
            </div>
            <hr />
        </form>
 }

        @using (Html.BeginForm("DownloadAnnexure", "SalesOrderDeliveryMasterAndDetails", FormMethod.Post, new { }))
        {
            <form id="FormCreateSaleContractRecieptMaster" method="post">
                <div id="displayErrorMessage" role="alert" hidden class="alert">
                    <button class="close" type="button"><span aria-hidden="true">×</span></button>
                    <p id="SectionErrorMessage"></p>
                </div>
                <div class="card-body card-padding">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group" style="padding-top: 1%;">
                                @Html.HiddenFor(model => model.SalesOrderDeliveryMasterID)
                                @Html.HiddenFor(model => model.SalesOrderMasterID)
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="margin-right:800px;">
                        <button class="btn bgm-bluegray btn-sm m-t-10 waves-effect" style="margin-left:3%;" id="CreateDownloadDM" type="button" onclick="this.form.submit(); $.magnificPopup.close();">Download Annexure</button>
                    </div>
                </div>
                <hr />
            </form>
        }
    </div>
</div>





