@model AERP.ViewModel.SalesOrderMasterAndDetailsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    .mfp-content {
        /*width: 70%;*/
    }
</style>
<script src="@Url.Content("~/Scripts/AERP_Scripts/Sales/SalesOrderMasterAndDetails.js")" type="text/javascript"></script>
<script src="~/Content/Theme/vendors/bower_components/typeahead.js/dist/typeahead.jquery.js"></script>

<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Manage Sales Order</h2>
       
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-header">
            <ul class="actions">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown" title="Add New">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            <a class="mfpAjaxModal" href="@Url.Action("Create", "SalesOrderMasterAndDetails")">
                                <i class="zmdi zmdi-plus-square"></i> &nbsp; @Resources.DisplayName_AddNew
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="card-body card-padding">
           
            @Html.HiddenFor(model => model.GeneralUnitsID)
            <form class="row" role="form">
              
                <div class="col-sm-5" style="display:none;">
                    <div class="select form-group fg-line">
                        @Html.TextBoxFor(model => model.SalesOrderDate, new { @class = "form-control input-sm", Value = "" + DateTime.UtcNow.ToString("d MMM yyyy") + "" })

                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group fg-line">
                        <label>@Html.LabelFor(model => model.MonthName, new { })</label>
                        @Html.DropDownList("MonthName", ViewData["MonthName"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "MonthList*" })
                    </div>
                    @Html.ValidationMessageFor(model => model.MonthName)
                </div>

                <div class="col-sm-3">
                    <div class="form-group fg-line">
                        <label>@Html.LabelFor(model => model.MonthYear, new { })</label>
                        @Html.DropDownList("MonthYear", ViewData["MonthYear"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "YearList*" })
                    </div>
                    @Html.ValidationMessageFor(model => model.MonthYear)
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" id="btnShowListforSalesOrder">@Resources.GlobalProperties_ShowList</button>

                </div>
            </form>
        </div>
    </div>

    <div id="ListViewModel"> </div>
</div>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<script type="text/javascript">
        $(document).ready(function () {
         
            SalesOrderMasterAndDetails.Initialize();
          
        });
</script>
