@model AERP.ViewModel.CustomerMasterViewModel
<script src="@Url.Content("~/Scripts/AERP_Scripts/Sales/CustomerMaster.js")" type="text/javascript"></script>
<div id="custom-content">
    @Html.HiddenFor(model => model.CustomerMasterID)
    @Html.HiddenFor(model => model.CustomerBranchMasterID)
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Customer Contact Details</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateCustomerContactDetails" role="form">
                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.CustomerMasterName, new { })
                        @Html.TextBoxFor(model => model.CustomerMasterName, new { maxlength = "80", @class = "form-control input-sm typeahead", disabled = "disabled" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.CompanyTypeName, new { })
                        @Html.TextBoxFor(model => model.CompanyTypeName, new { maxlength = "100", @class = "form-control input-sm typeahead", disabled = "disabled" })
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-3">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.CustomerContactFirstName, new { })
                            @Html.TextBoxFor(model => model.CustomerContactFirstName, new { @class = "form-control input-sm typeahead" })
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="form-group fg-line">
                            @*@Html.LabelFor(model => model.AltQty, new { })*@
                            @Html.LabelFor(model => model.CustomerContactMiddleName, new { })
                            @Html.TextBoxFor(model => model.CustomerContactMiddleName, new { maxlength = "100", @class = "form-control input-sm typeahead" })

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group fg-line">
                            @*@Html.LabelFor(model => model.AltQty, new { })*@
                            @Html.LabelFor(model => model.CustomerContactLastName, new { })
                            @Html.TextBoxFor(model => model.CustomerContactLastName, new { maxlength = "100", @class = "form-control input-sm typeahead" })

                        </div>
                    </div>
                    <div class="col-sm-1" style="width:auto;">
                        <label style="margin-top: 13%; margin-bottom: 2%;">
                            <label class="fg-label">Is Primary Contact </label><br /><br />
                            <div class="checkbox col-sm-4" style="margin-top:-7%;">
                                <input type="checkbox" id="IsPrimaryContact" name="IsPrimaryContact">
                                <i class="input-helper"></i>
                            </div>
                        </label>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-3">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.CustomerContactEmailID, new { })
                            @Html.TextBoxFor(model => model.CustomerContactEmailID, new { @class = "form-control input-sm typeahead" })
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="form-group fg-line">
                            @*@Html.LabelFor(model => model.AltQty, new { })*@
                            @Html.LabelFor(model => model.CustomerContactMobileNumber, new { })
                            @Html.TextBoxFor(model => model.CustomerContactMobileNumber, new { maxlength = "20", @class = "form-control input-sm typeahead" })

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group fg-line">
                            @*@Html.LabelFor(model => model.AltQty, new { })*@
                            @Html.LabelFor(model => model.CustomerContactDesignation, new { })
                            @Html.TextBoxFor(model => model.CustomerContactDesignation, new { maxlength = "50", @class = "form-control input-sm typeahead" })

                        </div>
                    </div>
                    <div class="col-sm-1" id="btnAdd1">
                        <!-- <button type="button" class="btn btn-primary" id="btnAdd">Add Row</button> -->
                        <button type="button" title="Add row" class="btn bgm-cyan btn-float waves-effect waves-circle waves-float" id="btnAdd" style="margin-top:10px"><i class="zmdi zmdi-plus"></i></button>
                    </div>
                </div>
              <br />
                <h4>List Of Customer Contact</h4>
                <table id="tblData" class="table">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Middle Name</th>
                            <th>Last Name</th>
                            <th>Primary Contact</th>
                            <th>Email</th>
                            <th>Mobile Number</th>
                            <th>Designation</th>
                            @*<th>Action</th>*@
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.ContactDetailsByCustomerMasterID)
                        {
                            <tr>
                                <td style="vertical-align:middle;">@item.CustomerContactFirstName<input id="CustomerContactFirstName"  style="display:none"  type="text" value="@item.CustomerContactFirstName"></td>
                                <td style="vertical-align:middle;">@item.CustomerContactMiddleName<input id="CustomerContactMiddleName" type="text" style="display:none" value="@item.CustomerContactMiddleName"></td>
                                <td style="vertical-align:middle;">@item.CustomerContactLastName<input id="CustomerContactLastName" type="text" style="display:none" value="@item.CustomerContactLastName"></td>
                                @if (@item.IsPrimaryContact == true)
                                {
                                    <td style="vertical-align:middle;"><input type="checkbox" checked="checked" value="1"></td>
                                }
                                else
                                {
                                    <td style="vertical-align:middle;"><input type="checkbox" value="0"></td>
                                }
                                
                                <td style="vertical-align:middle;">@*@item.CustomerContactEmailID*@<input id="CustomerContactEmailID" type="text"  class = "form-control input-sm typeahead" value="@item.CustomerContactEmailID"></td>
                                <td style="vertical-align:middle;">@*@item.CustomerContactMobileNumber*@<input id="CustomerContactMobileNumber" type="text" class="form-control input-sm typeahead" value="@item.CustomerContactMobileNumber"></td>
                                <td style="vertical-align:middle;">@*@item.CustomerContactDesignation*@<input id="CustomerContactDesignation" type="text" class = "form-control input-sm typeahead" value="@item.CustomerContactDesignation"></td>
                                <td style="display:none">@item.CustomerContactDetailsID<input type="hidden" style="display:none" value="@item.CustomerContactDetailsID"></td>
                             </tr>
                        }
                    </tbody>
                </table>
                <div class="form-group" style="margin-left:2%;">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateCustomerContactDetailsRecord" type="button" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        CustomerMaster.Initialize();
    });
</script>
