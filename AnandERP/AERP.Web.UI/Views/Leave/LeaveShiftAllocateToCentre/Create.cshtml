@model AERP.ViewModel.LeaveShiftAllocateToCentreViewModel

<form id="FormCreateLeaveShiftAllocateToCentre" method="post">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ShiftID)
    @Html.HiddenFor(model => model.CentreCode)


    <div id="update-message" class="error invisible"></div>

    <div class="widget-block">
        <div class="widget-head">
            <h5>@Resources.FormName_CreateShiftCentreWise</h5>
        </div>
        <div class="widget-content">
            <div class="widget-box" style="padding: 15px">

                <div class="control-group control-label">


                    <div class="controls input-xlarge text-tip">
                        <b>@Resources.Display_Areyousuretoallocate  <u>@Html.DisplayFor(model => model.LeaveShiftAllocateToCentreDTO.ShiftDesc)</u>@Resources.Display_Shiftto <u>@Html.DisplayFor(model => model.CentreName)</u> @Resources.Display_CentreQue</b>
                    </div>
                </div>
                <br />
                <div class="form-actions" style="border: 1px solid #e5e5e5; text-align: right">
                    <input type="button" id="CreateLeaveShiftAllocateToCentreRecord" value="@Resources.ButtonAction_Yes" class="btn btn-primary" />
                    <input name="" id="closeBtn" type="button" class="btn btn-secondary" value="@Resources.ButtonAction_No" />
                </div>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        LeaveShiftAllocateToCentre.Initialize();
    });
</script>
