    <script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/bootstrap-select/dist/js/bootstrap-select.js")" type="text/javascript"></script>*@



<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;@Resources.FormEdit_LeaveCompensatoryWorkDay</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:300px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormEditLeaveCompensatoryWorkDay" method="post">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.EmployeeID)
                @Html.HiddenFor(model => model.ID)

                <div class="col-sm-12">
                    @Html.LabelFor(model => model.WorkingDate, new { style = "" })
                    <div class="form-group  fg-line">
                        @Html.TextBoxFor(model => model.WorkingDate, new { @class = "form-control input-sm",style = "background-color:#fff;", @disabled = "disabled" })
                    </div>
                    @Html.ValidationMessageFor(model => model.WorkingDate)
                </div>
                
                <div class="col-sm-6">
                    @Html.LabelFor(model => model.CheckInTime, new { style = "" })
                    <div class="form-group  fg-line dtp-container">
                        @Html.TextBoxFor(model => model.CheckInTime, new { style = "", @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.CheckInTime)
                </div>

                <div class="col-sm-6">
                    @Html.LabelFor(model => model.CheckOutTime, new { style = "" })
                    <div class="form-group  fg-line dtp-container">
                        @Html.TextBoxFor(model => model.CheckOutTime, new { style = "", @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.CheckOutTime)
                </div>

                <div class="col-sm-12">
                    @Html.LabelFor(model => model.WorkingReason, new { style = "" })
                    <div class="form-group  fg-line">
                        @Html.TextAreaFor(model => model.WorkingReason, new { Maxlength = "255", @class = "form-control input-sm", style = "" })
                    </div>
                    @Html.ValidationMessageFor(model => model.WorkingReason)
                </div>
                 <div class="col-sm-12">
                         <div class="checkbox m-b-15">
                               <label>
                                  @if (Model.IsHalfDayUtilized == true)
                                {
                                <input type="checkbox" id="IsHalfDayUtilized" checked />
                                }
                                else{
                                <input type="checkbox" id="IsHalfDayUtilized"  />
                                }
                                <i class="input-helper"></i>
                                @Html.LabelFor(model => model.IsHalfDayUtilized)
                           </label>
                          </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group">
                        <button type="button" id="EditLeaveCompensatoryWorkDayRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

<script src="@Url.Content("~/Content/Theme/Components/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/Components/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        LeaveCompensatoryWorkDay.Initialize();
    });
</script>