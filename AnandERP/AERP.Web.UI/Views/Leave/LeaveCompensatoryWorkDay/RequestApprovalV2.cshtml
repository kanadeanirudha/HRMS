@model AERP.ViewModel.LeaveCompensatoryWorkDayViewModel
@{
    Layout = null;
}
<style>
    .mfp-content {
        width: 50% !important;
    }

    @@media (max-width:768px) {
        .mfp-content {
            width: 100% !important;
        }
    }
</style>
<script src="@Url.Content("~/Scripts/TimePicker/timepicki.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/TimePicker/timepicki.css")" rel="stylesheet"type="text/css" />
<script src="@Url.Content("~/Scripts/AERP_Scripts/Leave/LeaveCompensatoryWorkDayV2.js")" type="text/javascript"></script>
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; @Resources.FormCreate_LeaveCompensatoryWorkDay</h2>

    </div>
    <div class="card">
        <div class="card-body card-padding" id="FormApproveLeaveCompensatoryWorkDay" style="padding: 0 10px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateRequestApproval" role="form">
                @Html.HiddenFor(m => m.TaskCode)
                @Html.HiddenFor(m => m.TaskNotificationDetailsID)
                @Html.HiddenFor(m => m.TaskNotificationMasterID)
                @Html.HiddenFor(m => m.GeneralTaskReportingDetailsID)
                @Html.HiddenFor(m => m.PersonID)
                @Html.HiddenFor(m => m.StageSequenceNumber)
                @Html.HiddenFor(m => m.IsLastRecord)
                @Html.HiddenFor(m => m.ID)
                @Html.HiddenFor(m => m.ApplicationStatus)
                @Html.HiddenFor(m => m.LeaveSessionID)
                @Html.HiddenFor(m => m.CentreCode)

                <div class="col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.WorkingDate, new { })
                        @Html.TextBoxFor(model => model.WorkingDate, new { disabled = "disabled", @class = "form-control" })
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.CheckInTime, new { })
                        @Html.TextBoxFor(model => model.CheckInTime, new { disabled = "disabled", @class = "form-control" })
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.CheckOutTime, new { })
                        @Html.TextBoxFor(model => model.CheckOutTime, new { disabled = "disabled", @class = "form-control" })
                    </div>
                </div>

                  <div class="col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.WorkingReason, new { })
                        @Html.TextBoxFor(model => model.WorkingReason, new { disabled = "disabled", @class = "form-control" })
                    </div>
                </div>
                 <div class="col-sm-12">
                         <div class="checkbox m-b-15">
                               <label>
                                  @if (Model.IsHalfDayUtilized == true)
                                {
                                <input type="checkbox" id="IsHalfDayUtilized" checked  disabled />
                                }
                                else{
                                <input type="checkbox" id="IsHalfDayUtilized" disabled  />
                                }
                                <i class="input-helper"></i>
                                @Html.LabelFor(model => model.IsHalfDayUtilized)
                           </label>
                          </div>
                </div>

                <div class="form-group">
                    <button type="button" id="ApproveLeaveCompensatoryWorkDayRecord" class="btn btn-success btn-sm m-t-10 waves-effect">@Resources.ButtonAction_Approve</button>
                    <button type="button" id="RejectLeaveCompensatoryWorkDayRecord" class="btn btn-danger btn-sm m-t-10 waves-effect">@Resources.ButtonAction_Reject </button>
                </div>

            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        LeaveCompensatoryWorkDayV2.Initialize();
    });
</script>

