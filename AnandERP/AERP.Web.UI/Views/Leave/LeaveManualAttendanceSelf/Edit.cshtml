@model AERP.ViewModel.LeaveManualAttendanceViewModel
@{
    Layout = null;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/fnReloadAjax.js")" type="text/javascript"></script>

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Edit Manual Attendance</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:300px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormEditLeaveManualAttendanceSelf" method="post">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(Model => Model.ID)

                <div class="col-sm-6">
                    @Html.LabelFor(model => model.AttendanceDate, new { Readonly = "true" })
                    <div class="form-group  fg-line dtp-container">
                        @Html.TextBoxFor(model => model.AttendanceDate, new { Readonly = "true", @class = "form-control input-sm", @disabled = "disabled", style = "background-color:#fff;" })
                    </div>
                    @Html.ValidationMessageFor(model => model.AttendanceDate)
                </div>

                <div class="col-sm-6">
                    @Html.LabelFor(model => model.AttendenceFor, new { style = "" })
                    <div class="form-group  fg-line select">
                        @Html.DropDownList("AttendenceFor", ViewData["AttendenceFor"] as List<SelectListItem>, new { id = "AttendenceFor", style = "", @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="col-sm-6" id="Div_CheckInTime">
                    @Html.LabelFor(model => model.CheckInTime, new { style = "background-color:#fff;" })
                    <div class="form-group  fg-line dtp-container">
                        @Html.TextBoxFor(model => model.CheckInTime, new { Readonly = "true", style = "background-color:#fff;",  @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.CheckInTime)
                </div>

                <div class="col-sm-6" id="Div_CheckOutTime">
                    @Html.LabelFor(model => model.CheckOutTime, new { style = "background-color:#fff;" })
                    <div class="form-group  fg-line dtp-container">
                        @Html.TextBoxFor(model => model.CheckOutTime, new { Readonly = "true", style = "background-color:#fff;",  @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.CheckOutTime)
                </div>

                <div class="col-sm-12">
                    @Html.LabelFor(model => model.Reason, new { style = "" })
                    <div class="form-group  fg-line">
                        @Html.TextAreaFor(model => model.Reason, new { Maxlength = "255", @class = "form-control input-sm", style = "" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Reason)
                </div>

                <div class="col-sm-12">
                    <div class="form-group">
                        <button type="button" id="EditLeaveManualAttendanceSelfRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        LeaveManualAttendanceSelf.Initialize();
        if ($('#AttendenceFor').val() == "CIT") {
            $('#Div_CheckInTime').show();
            $('#Div_CheckOutTime').hide();
            $('#CheckOutTime').val("");
        }
        else if ($('#AttendenceFor').val() == "COT") {
            $('#Div_CheckInTime').hide();
            $('#Div_CheckOutTime').show();
            $('#CheckInTime').val("");
        }
        else if ($('#AttendenceFor').val() == "B") {
            $('#Div_CheckInTime').show();
            $('#Div_CheckOutTime').show();
        }
 });
</script>