@model AERP.ViewModel.LeaveAttendanceSpecialRequestViewModel
@{
    Layout = null;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Theme/vendors/bower_components/bootstrap-select/dist/css/bootstrap-select.css")" rel="stylesheet" type="text/css" />

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;@Resources.FormCreate_SelfAttendanceSpecialRequest</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:320px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateLeaveAttendanceSpecialRequestSelf" method="post">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.RequestedDate, new { Readonly = "true" })
                        <div class="form-group  fg-line dtp-container">
                            @Html.TextBoxFor(model => model.RequestedDate, new { Readonly = "true", style = "background-color:#fff;", @class = "form-control input-sm" })
                        </div>
                        @Html.ValidationMessageFor(model => model.RequestedDate)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                                    <label class="radio radio-inline m-r-20">
                                        @Html.RadioButtonFor(model => model.StatusFlag, "Late", new { @checked=true, id = "Late" })
                                        <i class="input-helper"></i>
                                        <b> @Resources.RadioButton_LateComing </b>
                                    </label>

                                    <label class="radio radio-inline m-r-20">
                                        @Html.RadioButtonFor(model => model.StatusFlag, "Early", new { id = "Early" })
                                        <i class="input-helper"></i>
                                        <b> @Resources.RadioButton_EarlyGoing</b>
                                    </label>
                        </div>
                        @Html.ValidationMessageFor(model => model.StatusFlag)
                    </div>
            </div>
                        <div class="col-sm-12">
                            <div class="col-sm-12" id="lateCommingDiv">
                                @Html.LabelFor(model => model.CommingTime, new { style = "" })
                                <div class="form-group  fg-line dtp-container">
                                    @Html.TextBoxFor(model => model.CommingTime, new { style = "", @class = "form-control input-sm" })
                                </div>
                                @Html.ValidationMessageFor(model => model.CommingTime)
                            </div>

                            <div class="col-sm-12" id="earlyGoingDiv">
                                @Html.LabelFor(model => model.LeavingTime, new { style = "" })
                                <div class="form-group  fg-line dtp-container">
                                    @Html.TextBoxFor(model => model.LeavingTime, new { style = "", @class = "form-control input-sm" })
                                </div>
                                @Html.ValidationMessageFor(model => model.LeavingTime)
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="col-sm-12">
                                @Html.LabelFor(model => model.Reason, new { style = "" })
                                <div class="form-group  fg-line">
                                    @Html.TextAreaFor(model => model.Reason, new { style = "", @class = "form-control input-sm" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Reason)
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="button" id="CreateLeaveAttendanceSpecialRequestSelfRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary btn-sm m-t-10 waves-effect" />
                            </div>
                        </div>
</form>

        </div>
    </div>
</div>

<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
