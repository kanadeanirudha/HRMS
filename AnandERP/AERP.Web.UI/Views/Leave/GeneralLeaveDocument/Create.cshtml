@model AERP.ViewModel.GeneralLeaveDocumentViewModel
@{
    Layout = null;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/fnReloadAjax.js")" type="text/javascript"></script>

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Leave Document</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:215px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateGeneralLeaveDocument" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="col-sm-6">
                    <span style="color:red">*</span>@Html.LabelFor(model => model.DocumentName, new { style = "" })
                    <div class="form-group  fg-line">
                        @Html.TextBoxFor(model => model.DocumentName, new { @class = "form-control input-sm", maxlength = "30" })
                    </div>
                    @Html.ValidationMessageFor(model => model.DocumentName)
                </div>

                <div class="col-sm-6">
                    <span style="color:red">*</span>@Html.LabelFor(model => model.DocumentType, new { style = "" })
                    <div class="form-group  fg-line select">
                        @Html.DropDownList("DocumentType", ViewData["DocumentType"] as List<SelectListItem>, new { id = "DocumentType", style = "", @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.DocumentType)
                </div>
                

                <div class="col-sm-12">
                    @Html.LabelFor(model => model.DocumentDescription, new { style = "" })
                    <div class="form-group  fg-line">
                        @Html.TextBoxFor(model => model.DocumentDescription, new { style = "", @class = "form-control input-sm", maxlength = "60" })
                    </div>
                    @Html.ValidationMessageFor(model => model.DocumentDescription)
                </div>

                <div class="col-sm-12">
                    <div class="form-group">
                        <button type="button" id="CreateGeneralLeaveDocumentRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                        <button type="button" id="reset" class="btn btn-default">@Resources.ButtonAction_Reset</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        GeneralLeaveDocument.Initialize();
    });

</script>