@model AERP.ViewModel.SalaryDeductionMasterViewModel

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Salary Deduction</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateSalaryDeductionMaster">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.DeductionHeadName, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.DeductionHeadName, new { @class = "form-control", maxlength = "200", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DeductionHeadName)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.DeductionType, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.DropDownList("DeductionType", (SelectList)ViewBag.DeductionTypeList, "---Select Deduction Type---", new { style = "", @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DeductionType)
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.DeductionSubType, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.DeductionSubType, new { @class = "form-control", maxlength = "200", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DeductionSubType)
                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.ComplianceType, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.DropDownList("ComplianceType", (SelectList)ViewBag.ComplianceTypeList, new { style = "", @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ComplianceType)
                    </div>
                </div>
                <div class="form-group" style="margin-left: 2%; ">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateSalaryDeductionMasterRecord" type="button" />
                    <input name="" id="reset" type="submit" class="btn btn-default" value="@Resources.ButtonAction_Reset" />
                </div>
            </form>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        SalaryDeductionMaster.Initialize();
    });
</script>



