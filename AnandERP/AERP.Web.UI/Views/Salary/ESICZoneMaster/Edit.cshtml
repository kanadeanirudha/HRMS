@model AERP.ViewModel.ESICZoneMasterViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;Update ESIC Zone Master </h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormEditESICZoneMaster" role="form" class="row">
                <div class="row">
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.HiddenFor(model => model.ID)
                            @Html.LabelFor(model => model.ZoneName, new { })
                            @Html.TextBoxFor(model => model.ZoneName, new { @class = "form-control input-sm " })

                        </div>
                        @Html.ValidationMessageFor(model => model.ZoneName)
                    </div>
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.ZoneCode, new { })
                            @Html.TextBoxFor(model => model.ZoneCode, new { @class = "form-control input-sm " })

                        </div>
                        @Html.ValidationMessageFor(model => model.ZoneCode)
                    </div>
                    @*<div class="row">*@
                    <div class="col-sm-6">
                        @if (Model.ESICZoneMasterDTO.IsDefault == true)
                        {
                            <div class="col-sm-6">
                                <div class="checkbox m-b-15" style="padding-top:8%;">
                                    <label>
                                        <input type="checkbox" id="IsDefault" checked disabled="disabled">
                                        <i class="input-helper"></i>
                                        @Html.LabelFor(model => model.IsDefault)
                                    </label>
                                </div>
                                @Html.ValidationMessageFor(model => model.IsDefault)
                            </div>
                        }
                        else
                        {
                            <div class="col-sm-6">
                                <div class="checkbox m-b-15" style="padding-top:8%;">
                                    <label>
                                        <input type="checkbox" id="IsDefault">
                                        <i class="input-helper"></i>
                                        @Html.LabelFor(model => model.IsDefault)
                                    </label>
                                </div>
                                @Html.ValidationMessageFor(model => model.IsDefault)
                            </div>

                        }
                    </div>
                </div>


                <div class="form-group col-sm-12">
                    <input class="btn btn-primary" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="EditESICZoneMasterRecord" type="button" />
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        ESICZoneMaster.Initialize();
    });
</script>



