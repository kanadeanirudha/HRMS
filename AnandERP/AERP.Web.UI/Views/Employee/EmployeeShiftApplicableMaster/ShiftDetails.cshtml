@model AERP.ViewModel.EmployeeShiftMasterViewModel
@{

    Layout = null;
}
<script src="@Url.Content("~/Scripts/fnReloadAjax.js")" type="text/javascript"></script>
@Html.HiddenFor(m => m.EmployeeShiftMasterID)

<table id="myDataTableForShiftDetails" class="table table-striped table-vmiddle table-responsive">
    <thead>
        <tr>
            <th rowspan="1" colspan="2">@Resources.TableHeaders_ShiftDay</th>
            <th rowspan="1" colspan="2">@Resources.TableHeaders_Timing</th>
            <th rowspan="1" colspan="2">@Resources.TableHeaders_StartTimeMargin</th>
            <th rowspan="1" colspan="2">@Resources.TableHeaders_LunchTime</th>
            <th rowspan="1" colspan="1">@Resources.TableHeaders_Consider</th>
            <th rowspan="1" colspan="1">@Resources.TableHeaders_First </th>
            <th rowspan="1" colspan="1">@Resources.TableHeaders_Second</th>
            <th rowspan="1" colspan="1">@Resources.TableHeaders_WeeklyOffPattern</th>

        </tr>

        <tr>
            <th>@Resources.TableHeaders_Day</th>
            <th>@Resources.TableHeaders_WeeklyOffDay</th>
            <th>@Resources.TableHeaders_From</th>
            <th>@Resources.TableHeaders_Upto</th>
            <th>@Resources.TableHeaders_Start</th>
            <th>@Resources.TableHeaders_End</th>
            <th>@Resources.TableHeaders_From</th>
            <th>@Resources.TableHeaders_Upto</th>
            <th>@Resources.TableHeaders_LateMark</th>
            <th>@Resources.TableHeaders_HalfUpto</th>
            <th>@Resources.TableHeaders_HalfFrom</th>
            <th>@Resources.TableHeaders_WeeklyOffType</th>
        </tr>
    </thead>
    @foreach (var item in ViewBag.ListEmployeeShiftMasterDetails)
    {
        <tbody>
            <tr class="">
                <td style="text-align:left">@item.WeekDay</td>
                @if (item.WeeklyOffStatus == "N")
                {
                    <td style="text-align:left"><span style="" class="btn btn-xs btn-warning">No</span> </td>
                }
                else if (item.WeeklyOffStatus == "Y")
                {
                    <td style="text-align:left"><span style="" class="btn btn-xs btn-primary">Yes </span> </td>
                }
                else
                {
                    <td style="text-align:left"><span style="" class="btn btn-xs btn-info" title="Not Define">N.D.</span> </td>
                }
                <td style="text-align:left">@item.ShiftTimeFrom</td>
                <td style="text-align:center">@item.ShiftTimeUpto</td>
                <td style="text-align:center">@item.ShiftTimeMargin</td>
                <td style="text-align:center">@item.ShiftEndBuffer</td>
                <td style="text-align:center">@item.LunchTimeFrom</td>
                <td style="text-align:center">@item.LunchTimeUpto</td>
                <td style="text-align:center">@item.ConsiderLateMarkUpto</td>
                <td style="text-align:center">@item.FirstHalfUpto</td>
                <td style="text-align:center">@item.SecondHalfFrom</td>
                @if (item.WeeklyOffType == "Not Applicable")
                {
                    <td style="text-align:left"><span style="" class="btn btn-xs btn-info" title="Not Applicable">N.A.</span> </td>
                }
                else if (item.WeeklyOffType == "ALL")
                {
                    <td style="text-align:left"><span style="" class="btn btn-xs btn-success" title="ALL">ALL</span> </td>
                }
                else if (item.WeeklyOffType == "AlternetEven")
                {
                    <td style="text-align:left"><span style="" class="btn btn-xs btn-warning" title="Alternet Even">A.E.</span> </td>
                }
                else if (item.WeeklyOffType == "AlternetOdd")
                {
                    <td style="text-align:left"><span style="" class="btn btn-xs btn-warning" title="Alternet Odd">A.O.</span> </td>
                }
                else
                {
                    <td style="text-align:left"><span style="" class="btn btn-xs btn-info" title="Not Define">N.D.</span> </td>
                }
            </tr>
        </tbody>
    }
</table>