@model AERP.ViewModel.EmpDesignationMasterViewModel
@{
    Layout = null;
}

<link href="@Url.Content("~/Content/Theme/vendors/bower_components/bootstrap-select/dist/css/bootstrap-select.css")" rel="stylesheet" type="text/css" />

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Update Employee Designation </h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:350px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <div id="update-message" class="alert" style="display: none; color: #000"></div>
            <form id="FormEditEmpDesignationMaster" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <span style="color:red">*</span>@Html.LabelFor(model => model.Description, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", maxlength = "50", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>

                    <div class="col-sm-6">
                        <span style="color:red">*</span>@Html.LabelFor(model => model.DesignationLevel, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.DesignationLevel, new { @class = "form-control", maxlength = "20", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DesignationLevel)
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <span style="color:red">*</span>@Html.LabelFor(model => model.Grade, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.Grade, new { @class = "form-control", maxlength = "15" })
                            
                        </div>
                        @Html.ValidationMessageFor(model => model.Grade)
                    </div>

                    <div class="col-sm-6">
                        <span style="color:red">*</span>@Html.LabelFor(model => model.ShortCode, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.ShortCode, new { @class = "form-control", maxlength = "4" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ShortCode)
                    </div>
                </div>
                
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <span style="color:red">*</span>@Html.LabelFor(model => model.EmpDesigType, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownList("EmpDesignationType", ViewData["EmpDesignationType"] as List<SelectListItem>, new { style = "", @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.EmpDesigType)
                    </div>

                    <div class="col-sm-6">
                        <span style="color:red">*</span>@Html.LabelFor(model => model.RelatedWith, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownList("RelatedWith", ViewData["RelatedWith"] as List<SelectListItem>, new { style = "", @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.RelatedWith)
                    </div>
                </div>

                @if(@Model.EmpDesignationMasterDTO.IsActive){
                
                    <div class="checkbox col-sm-12" style="padding-top: 2%; padding-left: 2%;">
                        <label>
                            <input type="checkbox" id="IsActive" checked>
                            <i class="input-helper"></i>
                            @Html.LabelFor(model => model.IsActive, new { style = "" })
                        </label>
                        @Html.ValidationMessageFor(model => model.IsActive)
                    </div>
                
                }
                else { 
                        <div class="checkbox col-sm-12" style="padding-top: 2%; padding-left: 2%;">
                            <label>
                                <input type="checkbox" id="IsActive">
                                <i class="input-helper"></i>
                                @Html.LabelFor(model => model.IsActive, new { style = "" })
                            </label>
                            @Html.ValidationMessageFor(model => model.IsActive)
                        </div>
                }
                

                @*<div class="spanFullName span1">
        @Html.LabelFor(model => model.IsActive, new { style = "font-Weight:Bold;" })
    </div>
    <div class="span3">
        @Html.CheckBoxFor(model => model.IsActive, new { style = "font-Weight:Bold;" })
        <br />
        @Html.ValidationMessageFor(model => model.IsActive)
    </div>*@

                <div class="col-sm-12">
                    <div class="form-group">
                        <button type="button" id="EditEmpDesignationMasterRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        EmpDesignationMaster.Initialize();
    });

</script>