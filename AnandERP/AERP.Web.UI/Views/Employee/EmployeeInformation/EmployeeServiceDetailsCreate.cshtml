                            @Html.TextBoxFor(model => model.OrderNumber, new { @class = "form-control", maxlength = "20" })
                        </div>
                        @Html.ValidationMessageFor(model => model.OrderNumber)
                    </div>

                    <div class="col-sm-4">
                        <span style="color:red">*</span>@Html.LabelFor(model => model.OrderDate, new { style = "" })
