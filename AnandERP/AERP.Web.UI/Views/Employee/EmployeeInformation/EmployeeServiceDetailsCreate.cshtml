                    <div class="col-sm-12">
                        <div class="form-group">
                            <button type="button" id="btnUpdateEmployeeServiceDetailsCreate" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                        </div>
                    </div>

                </div>
