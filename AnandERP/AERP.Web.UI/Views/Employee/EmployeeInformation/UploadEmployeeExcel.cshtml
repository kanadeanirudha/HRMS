@model AERP.ViewModel.EmpEmployeeMasterViewModel

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Employee Attendence</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessagee" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            @using (Html.BeginForm("UploadEmployeeExcel", "EmployeeInformation", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <form id="FormCreateTotalEmployeeMasterExcel" method="post">
                    <br /><br />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                @Resources.DisplayName_DepartmentName
                                <div class="form-group fg-line select">
                                    @Html.DropDownListFor(m => m.DepartmentID, Model.ListGetOrganisationDepartmentCentreAndDepartmentWiseItems, "--Select Department--", new { @class = "form-control", style = "", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Department" })
                                    @Html.HiddenFor(m => m.DepartmentID)
                                    @Html.HiddenFor(m => m.CentreCode)

                               </div>
                            </div>
                       </div>
                        <div class="row">
                            <label class="col-sm-3 control-label" style="padding: 11px 28px;" for="inputEmail3"><span style="color:red;">*</span>Upload Excel</label>
                            <div class="fileinput fileinput-new" data-provides="fileinput" style="padding-top: 11px;">
                                <span class="btn btn-primary btn-file m-r-10">
                                    <span class="fileinput-new">Choose File</span>
                                    <span class="fileinput-exists" style="padding-top: 11px;">Choose File</span>
                                    @Html.FileFor(model => model.ExcelFile)
                                </span>
                                <span class="fileinput-filename"></span>
                                <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="top:18px;">&times;</a>
                            </div>
                        </div>
                        
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" style="margin-left:3%;" id="CreateEmployeeRecordExcel" type="button" onclick="this.disabled = true; this.value = 'Sending, please wait...'; this.form.submit();" />
                    </div>

                </form>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        EmployeeInformation.Initialize();
    });
</script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/fileinput/fileinput.min.js")" type="text/javascript"></script>



