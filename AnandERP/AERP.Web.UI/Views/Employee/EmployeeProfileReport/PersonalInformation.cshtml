<div class="pm-overview c-overflow">
    <div class="pmo-pic">
        <div class="p-relative">
            <a href="">
                @*<img class="img-responsive" src="img/profile-pics/profile-pic-2.jpg" alt="">*@
                @{ Html.RenderAction("_EmployeePictureDetails", "EmployeeProfileReport", new { EmployeeID = HttpContext.Current.Session["CurrentEmployeeID"].ToString() }); }

            </a>

           

            <a href="#" class="pmop-edit">
                <i class="zmdi zmdi-camera"></i> <span class="hidden-xs">Update Profile Picture</span>
            </a>
        </div>


        <div class="pmo-stat">
            <h3 class="m-0 c-white">@HttpContext.Current.Session["EmployeeFullName"].ToString()</h3>
            <h4 class="m-0 c-white">@Model.EmployeeDesignation</h4>
           @Model.DepartmentName Department
        </div>
    </div>

    <div class="pmo-block pmo-contact hidden-xs">
        <h2><i class="zmdi zmdi-phone m-r-5"></i>Contact</h2>

        <ul>
            <li><i class="zmdi zmdi-email"></i> @Model.EmailID</li>
        </ul>
        <ul>
            <li><i class="zmdi zmdi-phone"></i>&nbsp; </li>
        </ul>
        
        <ul>
            <li>
                <i class="zmdi zmdi-pin"></i>
                <address class="m-b-0 ng-binding">

                </address>
            </li>
        </ul>
    </div>

    @*@{ Html.RenderAction("_EmployeeOfficeDetails", "EmployeeProfileReport", new { EmployeeID = HttpContext.Current.Session["CurrentEmployeeID"].ToString() }); }*@
</div>