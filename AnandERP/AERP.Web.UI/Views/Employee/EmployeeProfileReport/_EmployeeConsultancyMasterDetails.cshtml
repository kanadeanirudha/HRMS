@model AMS.ViewModel.EmployeeConsultancyMasterViewModel
@{
   
    Layout = null;
}
@Html.HiddenFor(model => model.EmployeeID)
@if (ViewBag.Data == 1)
{
    <div class="col-sm-12">
        <div class="card rating-list">
            <div class="listview">
                <div class="lv-header">
                    <div class="m-t-0">
                        @Resources.DisplayName_ConsultancyDetails
                    </div>
                    <div class="clearfix"></div>
                </div>

                @*<div class="lv-body">*@
                <div class="table-responsive" id="DataTables_Table_0_wrapper">
                    <table id="DataTables_Table_0" class="table">
                        <thead>
                            <tr class="warning c-white">
                                <th>@Resources.TableHeaders_ConsultancyName</th>
                                <th>@Html.LabelFor(model => model.TitleOfAssignment)</th>
                                <th>@Html.LabelFor(model => model.ConsultancyCost)</th>
                                <th>TableHeaders_Duration</th>                                   
                            </tr>
                        </thead>
                        @foreach (var item in ViewBag.ListEmployeeConsultancyMaster)
                        {
                            <tbody>
                                <tr class="active">
                                    <td>@item.ConsultancyName</td>                                      
                                    <td>@item.TitleOfAssignment</td>
                                    <td>@item.ConsultancyCost</td>
                                    <td>@item.ConsultingFromDate - @item.ConsultingToDate</td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
                @*</div>*@
            </div>
        </div>
    </div>

}