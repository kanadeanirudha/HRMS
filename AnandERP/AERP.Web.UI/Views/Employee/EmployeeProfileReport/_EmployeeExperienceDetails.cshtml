@model AMS.ViewModel.EmployeeExperienceViewModel
@{
   
    Layout = null;
}
@Html.HiddenFor(model => model.EmployeeID)

@if(ViewBag.Data== 1)
{
    <div class="col-sm-12">
        <div class="card rating-list">
            <div class="listview">
                <div class="lv-header">
                    <div class="m-t-0">
                        @Resources.DisplayName_CareerProfileTeachingExperience - @Resources.DisplayName_ExperienceDetails
                    </div>
                    <div class="clearfix"></div>
                </div>

                @*<div class="lv-body">*@
                <div class="table-responsive" id="DataTables_Table_0_wrapper">
                    <table id="DataTables_Table_0" class="table">
                        <thead>
                            <tr class="danger c-white">
                                <th>@Resources.TableHeaders_Designation </th>
                                <th>@Resources.TableHeaders_Organisation</th>
                                <th>@Resources.TableHeaders_Experience</th>
                                <th>@Resources.TableHeaders_Duration</th>
                            </tr>
                        </thead>
                        @foreach (var item in ViewBag.ListEmployeeExperienceDetails)
                        {
                            <tbody>
                                <tr class="active">
                                    <td>@item.Designation</td>
                                    <td>@item.PreviousOrganisationName </td>
                                    @if (item.ExperienceInMonth < 12)
                                    {
                                        <td>@item.ExperienceInMonth Month</td>
                                    }
                                    else
                                    {

                                        int num = 12;
                                        int mnth = 0;
                                        //float year = (Convert.ToInt32(item.ExperienceInMonth) / num);
                                        float year = Math.DivRem(Convert.ToInt32(item.ExperienceInMonth), num, out mnth);

                                        <td>@year Years @mnth month</td>
                                    }
                                    <td>@item.ExperienceFromYear  -  @item.ExperienceToYear</td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
                @*</div>*@
            </div>
        </div>
    </div>

}