@model AMS.ViewModel.EmployeeOtherCollegeSpecialLectureDetailsViewModel
@{
   
    Layout = null;
}
@Html.HiddenFor(model => model.EmployeeID)
@if(ViewBag.Data== 1)
{
    <div class="col-sm-12">
        <div class="card rating-list">
            <div class="listview">
                <div class="lv-header">
                    <div class="m-t-0">
                        @Resources.DisplayName_InvitedLectures - @Resources.DisplayName_SpecialLectureDetails
                    </div>
                    <div class="clearfix"></div>
                </div>

                @*<div class="lv-body">*@
                <div class="table-responsive" id="DataTables_Table_0_wrapper">
                    <table id="DataTables_Table_0" class="table">
                        <thead>
                            <tr class="warning c-white">
                                <th>@Html.LabelFor(m => m.TopicOfLecture, new { @class = "", style = "" })</th>
                                <th>@Html.LabelFor(m => m.InstituteName, new { @class = "", style = "" })</th>
                                <th>@Html.LabelFor(m => m.InstituteAddress, new { @class = "", style = "" })</th>
                                <th>@Html.LabelFor(m => m.DateOfLectureDelivered, new { @class = "", style = "" })</th>
                            </tr>
                        </thead>
                        @foreach (var item in ViewBag.ListEmployeeOtherCollegeSpecialLectureDetails)
                        {
                            <tbody>
                                <tr class="active">
                                    <td>@item.TopicOfLecture</td>
                                    <td>@item.InstituteName </td>
                                    <td>@item.InstituteAddress</td>
                                    <td>@item.DateOfLectureDelivered</td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
                @*</div>*@
            </div>
        </div>
    </div>

}