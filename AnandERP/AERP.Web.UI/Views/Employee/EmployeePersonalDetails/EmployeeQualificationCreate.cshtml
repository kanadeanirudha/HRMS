@model AERP.ViewModel.EmployeeQualificationViewModel
@{
    Layout = null;
}
<style type="text/css">
    .mfp-content {
        width: 75%;
    }
</style>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Qualification Details</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:650px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <div id="update-message" class="alert" style="display: none; color: #000"></div>

            <div class="" id="EmployeeQualification">
            </div>

            <div id="EmployeeServiceDetails">
                <form id="FormCreateEmployeeQualification" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.EmployeeID)


                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.EducationTypeID, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownListFor(m => m.EducationTypeID, (SelectList)ViewBag.GeneralEducationTypeMaster, "---Select Education Type---", new { @class = "form-control", style = "", })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.SelectedEducationID, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownListFor(m => m.SelectedEducationID, (SelectList)ViewBag.GeneralEducationMaster, "---Select Education---", new { @class = "form-control", style = "", })
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12">
                        <div class="col-sm-4">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.SpecailisationIn, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.SpecailisationIn, new { @class = "form-control", maxlength = "150" })
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.EducationYear, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.EducationYear, new { @class = "form-control", maxlength = "10" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            @*@Html.LabelFor(model => model.EducationYear, new { style = "" })*@
                            <span style="color:red"></span>
                            <div class="form-group  fg-line" style="padding-top:22px">
                                @Html.TextBoxFor(model => model.Unit, new { @class = "form-control", maxlength = "10",placeholder="Unit" })
                            </div>
                        </div>
                    </div>

                    

                    <div class="col-sm-12">
                        <div class="col-sm-4">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.FromYear, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownList("FromYear", ViewData["FromYear"] as List<SelectListItem>, new { style = "", @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.UptoYear, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownList("UptoYear", ViewData["UptoYear"] as List<SelectListItem>, new { style = "", @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.YearOfPassing, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownList("YearOfPassing", ViewData["YearOfPassing"] as List<SelectListItem>, new { style = "", @class = "form-control" })
                            </div>
                        </div>

                    </div>
                    

                    <div class="col-sm-12">
                        
                        <div class="col-sm-12">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.NameOfInstitution, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.NameOfInstitution, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        @*<div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.BoardUniversityID, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownListFor(m => m.BoardUniversityID, (SelectList)ViewBag.GeneralBoardUniversityMaster, "---Select University OR Board---", new { @class = "form-control", style = "", })
                            </div>
                        </div>*@

                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.PassingDivision, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownList("PassingDivision", ViewData["PassingDivision"] as List<SelectListItem>, new { style = "", @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12" style="display:none">
                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.NoOfAttempts, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.NoOfAttempts, new { @class = "form-control", min = "0", type = "number" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.AggregatePercentage, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(m => m.AggregatePercentage, new { @class = "form-control", style = "", maxlength = "10" })
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12" style="display:none">
                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.FinalYearPercentage, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(m => m.FinalYearPercentage, new { @class = "form-control", maxlength = "10" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.Rank, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.Rank, new { @class = "form-control", min = "0", type = "number" })
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="col-sm-12">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.Remark, new { style = "" })
                            <div class="form-group  fg-line">
                            @Html.TextAreaFor(model => model.Remark, new { @class = "form-control", maxlength = "255", style = "" })
                            </div>
                        </div>
                    </div>

                    
                    
                    <div class="col-sm-12">
                        <div class="form-group">
                            <button type="button" id="CreateEmployeeQualificationRecord" class="btn btn-primary">@Resources.ButtonAction_SaveChanges</button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        EmployeeQualification.Initialize();
    });

</script>


