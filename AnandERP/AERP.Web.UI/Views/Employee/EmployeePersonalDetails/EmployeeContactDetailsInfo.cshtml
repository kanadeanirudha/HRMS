@model AERP.ViewModel.EmployeeContactDetailsViewModel
@{
    Layout = null;
}
<style type="text/css">
    .mfp-content {
        width: 75%;
    }
</style>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Contact Details</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:550px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <div id="update-message" class="alert" style="display: none; color: #000"></div>

            <div class="" id="EmployeeServiceDetails">
            </div>

            <div id="EmployeeContactDetails">
                <form id="FormDetailsEmployeeContactDetails" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.EmployeeID)
                    @Html.HiddenFor(model => model.ID, new { id = "ContactID" })
                    @Html.HiddenFor(model => model.CurrentAddressFlag)


                    <div class="col-sm-12">
                        <div class="col-sm-12">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.AddressType, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownList("AddressType", ViewData["AddressType"] as List<SelectListItem>, new { style = "", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.AddressType)
                        </div>



                    </div>
                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.EmployeeAddress1, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextAreaFor(model => model.EmployeeAddress1, new { @class = "form-control", maxlength = "255" })
                            </div>
                            @Html.ValidationMessageFor(model => model.EmployeeAddress1)
                        </div>

                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.EmployeeAddress2, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextAreaFor(model => model.EmployeeAddress2, new { @class = "form-control", maxlength = "255" })
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.PlotNumber, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.PlotNumber, new { @class = "form-control", maxlength = "20" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.StreetName, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.StreetName, new { @class = "form-control", maxlength = "50" })
                            </div>
                        </div>
                    </div>


                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.CountryID, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownListFor(m => m.CountryID, (SelectList)ViewBag.GenCountryMaster, Resources.ddlHeaders_CountryName, new { @class = "form-control", style = "", })
                            </div>
                            @Html.ValidationMessageFor(model => model.CountryID)
                        </div>
                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.RegionID, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownListFor(m => m.RegionID, (SelectList)ViewBag.GeneralRegionMaster, Resources.ddlHeaders_RegionName, new { @class = "form-control", style = "", maxlength = "20" })
                            </div>
                            @Html.ValidationMessageFor(model => model.RegionID)
                        </div>


                    </div>

                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.CityID, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownListFor(m => m.CityID, (SelectList)ViewBag.GeneralCityMaster, Resources.ddlHeaders_CityName, new { @class = "form-control", style = "", })
                            </div>
                            @Html.ValidationMessageFor(model => model.CityID)
                        </div>

                        <div class="col-sm-6">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.Location, new { style = "" })
                            <div class="form-group  fg-line select">
                                @Html.DropDownListFor(m => m.Location, (SelectList)ViewBag.GeneralLocationMaster, Resources.ddlHeaders_LocationName, new { @class = "form-control", style = "", })
                            </div>
                            @Html.ValidationMessageFor(model => model.Location)
                        </div>

                    </div>

                    <div class="col-sm-12">
                        <div class="col-sm-4">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.Pincode, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.Pincode, new { @class = "form-control", maxlength = "20" })
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.TelephoneNumber, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.TelephoneNumber, new { @class = "form-control", maxlength = "30" })
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <span style="color:red">*</span>@Html.LabelFor(model => model.MobileNumber, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.MobileNumber, new { @class = "form-control", maxlength = "30" })
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        EmployeePersonalDetails.Initialize();
    });
</script>





