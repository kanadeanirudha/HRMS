@model AMS.ViewModel.EmployeeOtherCollegeSpecialLectureDetailsViewModel
@{
    Layout = null;
}

@* <div style="display: none">@Html.ActionLink("Create New", "Create", new { id = 0 }, new { @class = "ajax", title = "Create" })</div>*@
<div class="widget-block">
    <div class="widget-head">
        <h5 id="hFive">

            <script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.ID)
            @Html.HiddenFor(model => model.EmployeeID)

            @Resources.FormUpdate_OtherCollegeSpecialLectureDetails
            @*<i class="icon-plus" style="padding-left: 7px;cursor:pointer;margin-left:30%" id="HideShowEmployeeOfficeDetails"></i>*@
        </h5>

    </div>

    <div class="widget-content">
        <form id="FormEditEmployeeOtherCollegeSpecialLectureDetails" method="post" class="form-horizontal well">
            <div class="row">
                <div class="span10">
                    <div class="row control-group">
                        <div class="spanFullName">
                            @Html.LabelFor(m => m.InstituteName, new { @class = "control-label", style = "font-weight:bold" })
                        </div>
                        <div class="span3">
                            @Html.TextBoxFor(m => m.InstituteName, new { @class = "input-large", MaxLength = "255" })
                            <br />
                            @Html.ValidationMessageFor(model => model.InstituteName)
                        </div>
                        <div class="spanFullName">
                            @Html.LabelFor(m => m.InstituteAddress, new { @class = "control-label", style = "font-weight:bold" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(m => m.InstituteAddress, new { @class = "input-large", MaxLength = "255" })
                            <br />
                            @Html.ValidationMessageFor(model => model.InstituteAddress)


                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="span10">
                    <div class="row control-group">
                        <div class="spanFullName">
                            @Html.LabelFor(m => m.TopicOfLecture, new { @class = "control-label", style = "font-weight:bold" })
                        </div>
                        <div class="span3">
                            @Html.TextAreaFor(m => m.TopicOfLecture, new { @class = "input-large", MaxLength = "255" })
                            <br />
                            @Html.ValidationMessageFor(model => model.TopicOfLecture)
                        </div>
                        <div class="spanFullName">
                            @Html.LabelFor(m => m.Remarks, new { @class = "control-label", style = "font-weight:bold" })

                        </div>
                        <div class="span2">
                            @Html.TextAreaFor(m => m.Remarks, new { @class = "input-large", MaxLength = "255" })



                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="span10">
                    <div class="row control-group">
                        <div class="spanFullName">
                            @Html.LabelFor(m => m.DateOfLectureDelivered, new { @class = "control-label", style = "font-weight:bold" })
                        </div>
                        <div class="span3">
                            @Html.TextBoxFor(m => m.DateOfLectureDelivered, new { @class = "input-large", ReadOnly = "True" })
                            <br />
                            @Html.ValidationMessageFor(model => model.DateOfLectureDelivered)

                        </div>

                        <div class="spanFullName">
                            @Html.LabelFor(m => m.IsActive, new { @class = "control-label", style = "font-weight:bold" })
                        </div>
                        <div class="span2">
                            @Html.CheckBoxFor(m => m.IsActive)
                            @*  <br />
                            @Html.ValidationMessageFor(model => model.IsActive)*@
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-actions" style="padding-left: 0px; padding-bottom: 0px; text-align: right">
                <input type="button" id="EditEmployeeOtherCollegeSpecialLectureDetailsRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        EmployeeOtherCollegeSpecialLectureDetails.Initialize();
    });
</script>





