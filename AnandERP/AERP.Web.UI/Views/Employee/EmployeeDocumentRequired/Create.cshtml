@model AERP.ViewModel.EmployeeDocumentRequiredViewModel
    @{

        Layout = null;
    }
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.multiple.select.js")" type="text/javascript"></script>

<link href="@Url.Content("~/Content/materialtheme/vendors/bower_components/bootstrap-select/dist/css/bootstrap-select.css")" rel="stylesheet" type="text/css" />

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;@Resources.FormCreate_LateMarkRule</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:100px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <div id="update-message" class="alert" style="display: none; color: #000"></div>
            <form id="FormCreateEmployeeDocumentRequired" method="post">

                <div id="SuccessMessageShiftDetails" style="display: none; color: #000;" class="alert"></div>

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(m => m.CentreCode)
                @Html.HiddenFor(m => m.LeaveMasterID)
                @Html.HiddenFor(m => m.LeaveRuleMasterID)



                <div class="row" style="padding-bottom:5%;">
                    <div class="col-sm-12">
                        @Html.LabelFor(model => model.LeaveDescription, new { style = "" })
                        <div class="form-group  fg-line">
                            <input type="text" value="@Model.LeaveDescription" class="form-control" id="LeaveDescription" readonly="readonly" style="background-color:#fff;" disabled="disabled"/>
                        </div>
                    </div>
                </div>

                    <div class="row" id="DataTables_Table_1_wrapper">
                        <div id="DataTables_table_content">
                            <div class="card-body table-responsive">
                                <table id="myDataTableCreate" class="table">
                                    <thead>
                                        <tr>
                                            <th>@Resources.DisplayName_DocumentName</th>
                                            <th>Is Required</th>
                                            <th>@Resources.DisplayName_IsCompulsory</th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in ViewBag.ListEmployeeDocumentRequiredByLeaveRuleMasterID)
                                    {
                                        <tbody id="">

                                            <tr>
                                                <td style="">
                                                    @item.DocumentName
                                                </td>
                                                <td class="center" id="td_Required" style="">
                                                    @if (item.DocumentID > 0 && item.IsActive == true)
                                                    {
                                                        @*<input id="Required" type="checkbox" checked="checked" value="@item.ID~@item.DocumentID~R" />*@
                                                        
                                                        <div class="checkbox col-sm-6" style="padding-left: 2%;">
                                                            <label>
                                                                <input type="checkbox" id="Required" checked value="@item.ID~@item.DocumentID~R">
                                                                <i class="input-helper"></i>
                                                            </label>
                                                        </div>
                                                        
                                                    }
                                                    else
                                                    {
                                                        @*<input id="Required" type="checkbox" value="@item.ID~@item.DocumentID~NR" />*@
                                                        
                                                        <div class="checkbox col-sm-6" style="padding-left: 2%;">
                                                            <label>
                                                                <input type="checkbox" id="Required" value="@item.ID~@item.DocumentID~NR">
                                                                <i class="input-helper"></i>
                                                            </label>
                                                        </div>
                                                    }
                                                </td>
                                                <td class="center" id="td_Compulsary" style="">
                                                    @if (item.DocumentCompulsaryFlag == true && item.IsActive == true)
                                                    {
                                                        @*<input id="Compulsary" type="checkbox" checked="checked" value="@item.ID~@item.DocumentID~C" />*@
                                                        <div class="checkbox col-sm-6" style="padding-left: 2%;">
                                                            <label>
                                                                <input type="checkbox" id="Compulsary" checked value="@item.ID~@item.DocumentID~C">
                                                                <i class="input-helper"></i>
                                                            </label>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        if (item.DocumentID > 0 && item.IsActive == true)
                                                        {
                                                            @*<input id="Compulsary" type="checkbox" value="@item.ID~@item.DocumentID~C" />*@
                                                            <div class="checkbox col-sm-6" style="padding-left: 2%;">
                                                                <label>
                                                                    <input type="checkbox" id="Compulsary" value="@item.ID~@item.DocumentID~C">
                                                                    <i class="input-helper"></i>
                                                                </label>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            @*<input id="Compulsary" type="checkbox" disabled="disabled" value="@item.ID~@item.DocumentID~NC" />*@
                                                            <div class="checkbox col-sm-6" style="padding-left: 2%;">
                                                                <label>
                                                                    <input type="checkbox" id="Compulsary" disabled="disabled" value="@item.ID~@item.DocumentID~NC">
                                                                    <i class="input-helper"></i>
                                                                </label>
                                                            </div>
                                                        }
                                                    }
                                                </td>
                                            </tr>



                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
