@model AMS.ViewModel.EmployeeSpecializationResearchAreaDetailsViewModel
@{

    Layout = null;
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;@Resources.FormUpdate_SpecializationResearchAreaDetails</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:250px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <div id="update-message" class="alert" style="display: none; color: #000"></div>

            <form id="FormEditEmployeeSpecializationResearchAreaDetails" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(m => m.ID)
                @Html.HiddenFor(model => model.EmployeeID)


                <div class="col-sm-12">
                    <div class="col-sm-12">
                        <span style="color:red">*</span>@Html.LabelFor(model => model.SpecializationField, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.SpecializationField, new { @class = "form-control", style = "", maxlength = "100" })
                        </div>
                        @Html.ValidationMessageFor(model => model.SpecializationField)
                    </div>

                    <div class="col-sm-12">
                        <span style="color:red">*</span>@Html.LabelFor(model => model.ResearchArea, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextAreaFor(model => model.ResearchArea, new { @class = "form-control", style = "", maxlength = "250" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ResearchArea)
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group">
                        <button type="button" id="EditEmployeeSpecializationResearchAreaDetailsRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                        
                    </div>
                </div>


            </form>

        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        EmployeeSpecializationResearchAreaDetails.Initialize();
    });

</script>






