@model AERP.ViewModel.GeneralTaskModelViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Task Model</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:300px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateGeneralTaskModel">
                <div class="col-sm-6">
                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    @Html.LabelFor(model => model.TaskDescription, new { style = "" })
                    <div class="form-group  fg-line">
                        @Html.TextBoxFor(model => model.TaskDescription, new { @class = "form-control", maxlength = "50" })
                    </div>
                    @Html.ValidationMessageFor(model => model.TaskDescription)
                </div>

                <div class="col-sm-6">
                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    @Html.LabelFor(model => model.TaskCode, new { style = "" })
                    <div class="form-group fg-line">
                        @Html.TextBoxFor(model => model.TaskCode, new { @class = "form-control", maxlength = "20" })
                    </div>
                    @Html.ValidationMessageFor(model => model.TaskCode)
                </div>
                <div class="col-sm-6">
                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    @Html.LabelFor(model => model.MenuCode, new { style = "font-Weight:Bold;text-align:left" })
                    <div class="form-group  fg-line select">
                        @Html.DropDownListFor(model => model.MenuCode, Model.MenuCodeListItems, "--------Select Menu Code---------", new { @class = "form-control input-sm", style = "" })
                    </div>
                    @Html.ValidationMessageFor(model => model.MenuCode)
                </div>

                <div class="col-sm-6">
                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    @Html.LabelFor(model => model.LinkMenuCode, new { style = "" })
                    <div class="form-group  fg-line select">
                        @Html.DropDownListFor(model => model.LinkMenuCode, Model.LinkMenuCodeListItems, "--------Select Link Menu Code---------", new { @class = "form-control", style = "" })
                    </div>
                    @Html.ValidationMessageFor(model => model.LinkMenuCode)
                </div>

                <div class="col-sm-6">
                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    @Html.LabelFor(model => model.TaskModelApplicableTo, new { style = "" })
                    <div class="form-group  fg-line select">
                        @Html.DropDownList("TaskModelApplicableTo", ViewBag.TaskModelApplicableTo as List<SelectListItem>, new { @class = "form-control input-sm", style = "" })
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group" style="margin-left: 2%; ">
                        <button type="button" id="CreateGeneralTaskModelRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                        <button name="" id="reset" type="submit" class="btn btn-default" value="@Resources.ButtonAction_Reset">@Resources.ButtonAction_Reset</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        GeneralTaskModel.Initialize();
    });
</script>