@model AERP.ViewModel.GeneralTaskReportingDetailsViewModel
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/jquery-ui.theme.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/admin/jquery-ui-1.css")" rel="stylesheet" type="text/css" />

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<link href="@Url.Content("~/Content/Theme/vendors/bower_components/bootstrap-select/dist/css/bootstrap-select.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Edit Stage Details</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <div id="msgDiv" style="display:none;color:#000;" class="alert"></div>
            <form id="FormEditApprovalStageDetails">
                @Html.HiddenFor(m => m.GeneralTaskReportingDetailsID)
                @Html.HiddenFor(m => m.CentreCode)
                @Html.HiddenFor(m => m.RoleID)
                @Html.HiddenFor(m => m.HODAuthorizedEmployeeRoleID)
                <div class="col-sm-12">
                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.EmployeeName, new { })
                    </div>
                        <div class="col-sm-8">
                            <b>@Html.DisplayFor(model => model.EmployeeName, new { @class = "form-control", maxlength = "50", Value = "", tabindex = "0", style = "", min = "1" })
                            </b>
                        </div>

                    
                    
                </div>
                <hr />
                
                <div class="col-sm-12">
                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.HODAuthorizedEmployeeName, new { })
                    </div>
                    <div class="col-sm-8">
                        <b>
                            @Html.DisplayFor(model => model.HODAuthorizedEmployeeName, new { @class = "form-control", maxlength = "50", Value = "", tabindex = "0", style = "", min = "1" })
                        </b>
                    </div>
                </div>
                    <hr />


                    <div class="col-sm-12 m-t-15">
                        <div class="col-sm-6">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.RangeFrom, new { })
                            <div class="form-group fg-line">
                                @Html.TextBoxFor(model => model.RangeFrom, new { @class = "form-control", maxlength = "50", tabindex = "0", style = "", min = "1" })
                            </div>
                            @Html.ValidationMessageFor(model => model.RangeFrom)
                        </div>

                        <div class="col-sm-6">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.RangeUpto, new { })
                            <div class="form-group fg-line">
                                @Html.TextBoxFor(model => model.RangeUpto, new { @class = "form-control", maxlength = "50", tabindex = "0", style = "", min = "1" })
                            </div>
                            @Html.ValidationMessageFor(model => model.RangeUpto)
                        </div>
                    </div>



                    <div class="col-sm-12">

                        <div class="col-sm-6">
                            <div id="checkboxlistFeeCriteriaParameters" class="form-group">
                                @Html.LabelFor(model => model.DepartmentName, new { style = "" })
                                <p id="e5_f">
                                    <select id="checkboxlist1" class="form-group selectpicker" multiple name="selectCent">
                                        @foreach (var item in Model.OrganisationDepartmentList)
                                        {
                                            if (item.StatusFlag == true)
                                            {
                                                <option id="@item.DepartmentID" value="@item.DepartmentID~@item.DepartmentName" selected>@item.DepartmentName</option>
                                            }
                                            else
                                            {
                                                <option id="@item.DepartmentID" value="@item.DepartmentID~@item.DepartmentName">@item.DepartmentName</option>
                                            }
                                        }
                                    </select>
                                </p>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <button type="button" id="EditApprovalStageDetailsRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                    </div>
</form>

        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.multiple.select.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/bootstrap-select/dist/js/bootstrap-select.js")" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function () {
        GeneralTaskReportingDetails.Initialize();


        $('#checkboxlist1').selectpicker();

        //$('.selectpicker').selectpicker();

        //$('#checkboxlist1').multipleSelect();
    });

</script>
