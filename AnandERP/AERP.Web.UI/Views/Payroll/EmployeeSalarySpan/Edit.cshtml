@model AERP.ViewModel.EmployeeSalarySpanViewModel

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp; Edit Employee Salary Sapn</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormEditEmployeeSalarySpan" role="form" class="row">
                <div class="row">
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.HiddenFor(m => m.ID)
                            @Html.LabelFor(model => model.FromDate, new { style = "float:left;font-weight: bold;" })&nbsp;<b>:</b> &nbsp;<b>
                                @Html.DisplayFor(model => model.FromDate, new { style = "font-weight: bold;" })
                            </b>

                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.UptoDate, new { style = "float:left;font-weight: bold;" })&nbsp;<b>:</b> &nbsp;<b>
                                @Html.DisplayFor(model => model.UptoDate, new { style = "font-weight: bold;" })
                            </b>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        @if (@Model.EmployeeSalarySpanDTO.IsActive)
                        {
                            <div class="checkbox col-sm-12" style="padding-top: 2%; padding-left: 2%;">
                                <label>
                                    <input type="checkbox" id="IsActive" checked>
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.IsActive, new { style = "" })
                                </label>
                                @Html.ValidationMessageFor(model => model.IsActive)
                            </div>
                        }
                        else
                        {
                            <div class="checkbox col-sm-12" style="padding-top: 2%; padding-left: 2%;">
                                <label>
                                    <input type="checkbox" id="IsActive">
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.IsActive, new { style = "" })
                                </label>
                                @Html.ValidationMessageFor(model => model.IsActive)
                            </div>
                        }
                    </div>

                    <div class="form-group col-sm-6">
                        @if (@Model.EmployeeSalarySpanDTO.IsSalaryGenerated)
                        {
                            <div class="checkbox col-sm-12" style="padding-top: 2%; padding-left: 2%;">
                                <label>
                                    <input type="checkbox" id="IsSalaryGenerated" checked>
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.IsSalaryGenerated, new { style = "" })
                                </label>
                                @Html.ValidationMessageFor(model => model.IsSalaryGenerated)
                            </div>
                        }
                        else
                        {
                            <div class="checkbox col-sm-12" style="padding-top: 2%; padding-left: 2%;">
                                <label>
                                    <input type="checkbox" id="IsSalaryGenerated">
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.IsSalaryGenerated, new { style = "" })
                                </label>
                                @Html.ValidationMessageFor(model => model.IsSalaryGenerated)
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.CompletionDate, new { })
                            <div class="form-group  fg-line dtp-container">
                                @Html.TextBoxFor(model => model.CompletionDate, new { @class = "form-control", @style = "background-color:#fff;", ReadOnly = "True",disabled ="disabled" })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.CompletionDate)
                    </div>
                 </div>
                <div class="row">

                    <div class="form-group col-sm-6">
                        <input class="btn bgm-bluegray" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="EditEmployeeSalarySpanRecord" type="button" />
                    </div>
                    </div>

</form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.multiple.select.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/bootstrap-select/dist/js/bootstrap-select.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function ()
    {
        EmployeeSalarySpan.Initialize();
    });
</script>

