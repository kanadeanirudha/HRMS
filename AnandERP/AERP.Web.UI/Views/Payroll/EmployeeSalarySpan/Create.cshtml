@model AERP.ViewModel.EmployeeSalarySpanViewModel

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp; Create Employee Salary Span</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateEmployeeSalarySpan" role="form" class="row">
                <div class="form-group col-sm-6">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.FromDate, new { })
                        <div class="form-group  fg-line dtp-container">
                            @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control", Value = "", @style = "background-color:#fff;", ReadOnly = "True" })
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.FromDate)
                </div>

                <div class="form-group col-sm-6">
                    <div class="form-group fg-line">
                        @Html.HiddenFor(m => m.ID)
                        @Html.LabelFor(model => model.UptoDate)
                        <div class="form-group  fg-line dtp-container">
                            @Html.TextBoxFor(model => model.UptoDate, new { @class = "form-control", Value = "", @style = "background-color:#fff;", ReadOnly = "True" })
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.UptoDate)
                </div>
                <div class="form-group col-sm-12">
                    <input class="btn bgm-bluegray" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="CreateEmployeeSalarySpanRecord" type="button" />
                </div>
            </form>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.multiple.select.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/bootstrap-select/dist/js/bootstrap-select.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<script type="text/javascript">

    $(document).ready(function ()
    {
        EmployeeSalarySpan.Initialize();
    });
</script>

