@model AERP.ViewModel.EmployeeBulkAttendenceViewModel

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp; Edit Employee Attendance</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateEmployeeAttendence" role="form" class="row">
                <div class="row">
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.HiddenFor(m => m.ID)
                            @Html.HiddenFor(m => m.EmployeeID)
                            @Html.LabelFor(model => model.EmployeeName, new { style = "float:left;font-weight: bold;" })&nbsp;<b>:</b> &nbsp;<b>
                                @Html.DisplayFor(model => model.EmployeeName, new { style = "font-weight: bold;" })
                            </b>

                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.Span, new { style = "float:left;font-weight: bold;" })&nbsp;<b>:</b> &nbsp;<b>
                                @Html.DisplayFor(model => model.Span, new { style = "font-weight: bold;" })
                            </b>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.TotalAttendence, new { })
                            @Html.TextBoxFor(model => model.TotalAttendence, new { @class = "form-control", @style = "background-color:#fff;" })
                        </div>
                        @Html.ValidationMessageFor(model => model.TotalOvertime)
                    </div>
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.TotalOvertime, new { })
                            @Html.TextBoxFor(model => model.TotalOvertime, new { @class = "form-control", @style = "background-color:#fff;" })
                        </div>
                        @Html.ValidationMessageFor(model => model.TotalOvertime)
                    </div>
                </div>
                <div class="row">

                    <div class="form-group col-sm-6">
                        <input class="btn bgm-bluegray" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="CreateEmployeeAttendenceRecord" type="button" />
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Content/Theme/vendors/bower_components/bootstrap-select/dist/js/bootstrap-select.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function ()
    {
        EmployeeBulkAttendence.Initialize();
    });
</script>




