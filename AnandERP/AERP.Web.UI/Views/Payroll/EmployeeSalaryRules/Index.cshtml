@model AERP.ViewModel.EmployeeSalaryRulesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .mfp-content {
        width: 90%;
    }
</style>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
<script src="~/Content/Theme/vendors/bower_components/typeahead.js/dist/typeahead.bundle.js"></script>
<script src="@Url.Content("~/Scripts/AERP_Scripts/Payroll/EmployeeSalaryRules.js")" type="text/javascript"></script>

<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Employee Salary Rules</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-header">

            <form class="row" role="form">
                <div class="col-sm-4">
                    <div class="form-group fg-line select">
                        @Html.DropDownListFor(m => m.SelectedCentreCode, Model.ListGetAdminRoleApplicableCentreItems, Resources.ddlHeaders_CentreName, new { @class = "form-control", style = "", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Center Name" })
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group fg-line select">
                        @Html.DropDownListFor(m => m.SelectedDepartmentID, Model.ListGetOrganisationDepartmentCentreAndRoleWiseItems, "--Select Department--", new { @class = "form-control", style = "", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Department" })
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group fg-line">
                        <button type="button" class="btn btn-primary" id="btnShowList">@Resources.GlobalProperties_ShowList</button>
                    </div>
                </div>
            </form>
        </div>

        <div id="ListViewModel"> </div>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        EmployeeSalaryRules.Initialize();
    });
</script>
