@model AERP.ViewModel.CCRMServiceCallTypesViewModel
<style>
    .mfp-close-btn-in .mfp-close {
        color: #eee;
    }
</style>
<div class="mfp-content" style="background :#bfc6ca;width: 902px;margin: -10px 0px -10px -10px;">
    <div id="custom-content">
        <div class="block-header">
            <h2 style="background :#607d8b;color:white;margin-top: -10px;line-height: 2.5;width: 902px;margin-left: -10px;">&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Service Call Types</h2>
        </div>
        <div class="card">
            <div class="card-body card-padding" style="background:white;margin-top:-25px;margin-left: -10px;width: 902px;">
                <div id="displayErrorMessage" role="alert" hidden class="alert">
                    <button class="close" type="button"><span aria-hidden="true">×</span></button>
                    <p id="messageContent"></p>
                </div>
                <form id="FormCreateCCRMServiceCallTypes">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.CallTypeCode, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.CallTypeCode, new { @class = "form-control", maxlength = "100", style = "" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CallTypeCode)
                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.CallTypeName, new { style = "" })
                            <div class="form-group  fg-line">
                                @Html.TextBoxFor(model => model.CallTypeName, new { @class = "form-control", maxlength = "100", style = "" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CallTypeName)
                        </div>

                    </div>

                    <div id="divAllocateJob" class="row" style="padding:30px 30px;">
                        <div class="col-sm-4" >

                            <div class="checkbox col-sm-12" style="padding-top: 2%; padding-left: 2%;">
                                <label>
                                    <input type="checkbox" id="CalculateResponceTime">
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.ISCalculateResponceTime, new { style = "" })
                                </label>
                                @Html.ValidationMessageFor(model => model.ISCalculateResponceTime)
                            </div>
                        </div>
                        <div class="col-sm-4" >

                            <div class="checkbox col-sm-12" style="padding-top: 2%; padding-left: 2%;">
                                <label>
                                    <input type="checkbox" id="PMCall">
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.ISPMCall, new { style = "" })
                                </label>
                                @Html.ValidationMessageFor(model => model.ISPMCall)
                            </div>
                        </div>

                        <div class="col-sm-4" >
                            <div class="checkbox col-sm-12" style="padding-top: 2%; padding-left: 2%;">
                                <label>
                                    <input type="checkbox" id="ServiceReportRequired">
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.ISServiceReportRequired, new { style = "" })
                                </label>
                                @Html.ValidationMessageFor(model => model.ISServiceReportRequired)
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="margin-left: 2%; ">
                        <input class="btn btn-info" value="@Resources.ButtonAction_Submit" id="CreateCCRMServiceCallTypesRecord" type="button" />
                        @*<input name="" id="reset" type="submit" class="btn btn-default" value="@Resources.ButtonAction_Reset" />*@
                    </div>
                </form>

            </div>
        </div>
    </div>
    <script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            CCRMServiceCallTypes.Initialize();
        });
    </script>
</div>

