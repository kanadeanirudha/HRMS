@model AERP.ViewModel.CCRMMIFReportViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/AERP_Scripts/CCRM/Report/CCRMMIFReport.js")" type="text/javascript"></script>
<div class="container">
    @using (Html.BeginForm("Index", "CCRMMIFReport", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="block-header">
            <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;MIF Report</h2>
        </div>

        <div class="card">
            <div class="card-header"></div>
            <div class="card-body card-padding">
                @Html.HiddenFor(m => m.IsPosted)
                

                <div class="row">
                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.Status, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownList("Status", ViewData["Status"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Status*" })
                        </div>
                        @*@Html.ValidationMessageFor(model => model.Status)*@
                    </div>
                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.ContractType, new { })
                        <div class="form-group select fg-line">
                           
                            @Html.DropDownListFor(model => model.ContractTypeId, (SelectList)ViewBag.CCRMContractTypesMasterList, "---Select Contract---", new { @class = "form-control input-sm " })
                        </div>
                        @Html.ValidationMessageFor(model => model.ContractTypeId)
                    </div>
                    <div class="col-sm-4">

                       @Html.LabelFor(model => model.EnggName, new { })
                        <div class="form-group fg-line select">
                            @Html.DropDownListFor(model => model.EngineerID, (SelectList)ViewBag.EmpEmployeeMasterList, "-----Select  Engg-----", new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="col-sm-4">
                       
                        <span style="color:red">*</span>@Html.LabelFor(model => model.AreaPatchName, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.DropDownListFor(model => model.CCRMAreaPatchMasterID, (SelectList)ViewBag.CCRMAreaPatchMasterList, "-----Select Area-----", new { @class = "form-control input-sm" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CCRMAreaPatchMasterID)
                    </div>
                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.Category, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownList("Category", ViewData["Category"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Category*" })
                        </div>
                        @*@Html.ValidationMessageFor(model => model.Status)*@
                    </div>
                    <div class="col-sm-2" style="margin-top:7px">
                        <div class="fg-line">
                            <button type="submit" name="submit" id="btnCCRMMIFReportSubmit" class="btn-primary btn">Show</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>
<div class="container">

    <div id="aaa">
        <div class="card">
            @*<div class="card-header"></div>*@
            <div class="card-body card-padding">

                @Html.Partial("/Views/CCRM/Report/CCRMMIFReport/CCRMMIFReport.aspx");

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        CCRMMIFReport.Initialize();
        
    });
</script>
