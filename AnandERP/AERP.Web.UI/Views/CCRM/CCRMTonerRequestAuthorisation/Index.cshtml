@model AERP.ViewModel.CCRMTonerRequestAuthorisationViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .mfp-content {
        width: 60%;
    }
</style>

<script src="@Url.Content("~/Scripts/AERP_Scripts/CCRM/CCRMTonerRequestAuthorisation.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>



<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Manage Toner Request Authorisation</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        @*<div class="card-header">
                &nbsp;
            </div>*@
        <div class="card-body card-padding">
            <form class="row" role="form">
                <div class="col-sm-2">

                    <div class="checkbox col-sm-2" style="padding-top: 2%; padding-left: 2%;">
                        <label>
                            <input type="checkbox" id="Date">
                            <i class="input-helper"></i>
                            @*@Html.LabelFor(model => model.Date, new { style = "" })*@
                        </label>
                        @Html.ValidationMessageFor(model => model.Date)
                    </div>
                </div>
                <div class="col-sm-4" id="dvFromDate" >
                    @Html.LabelFor(model => model.FromDate, new { style = "" })
                    <div class="form-group  fg-line">
                        @Html.TextBoxFor(model => model.FromDate, new { maxlength = "100", @class = "form-control", style = "background-color:#fff;", disabled = "disabled" })
                    </div>
                   
                </div>
                <div class="col-sm-4" id="dvUptoDate" >
                    @Html.LabelFor(model => model.UptoDate, new { style = "" })
                    <div class="form-group  fg-line">
                        @Html.TextBoxFor(model => model.UptoDate, new { maxlength = "100", @class = "form-control", style = "background-color:#fff;", disabled = "disabled" })
                    </div>

                </div>
                

                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" id="btnShowListforList">@Resources.GlobalProperties_ShowList</button>
                </div>
            </form>
        </div>
    </div>

    <div id="ListViewModel"> </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        CCRMTonerRequestAuthorisation.LoadList();
        $('#FromDate').datetimepicker({
            format: 'DD MMM YYYY',
            maxDate: moment(),
            ignoreReadonly: true,
        })

        $('#UptoDate').datetimepicker({
            format: 'DD MMM YYYY',
            maxDate: moment(),
            ignoreReadonly: true,
        })
    });
</script>


