<script type="text/javascript">
        $(document).ready(function () {
            CCRMCallAllotmentMaster.Initialize();
            if ($("#CallStatus").val() == "2") {
                $("#CallStatus").val('Complete');
            }
            else if ($("#CallStatus").val() == "3") {
                $("#CallStatus").val('BreakDown');
            }
            else {
                $("#CallStatus").val('Open');

            }
        });
</script>
