@model AERP.ViewModel.InventoryExcelUploadViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ListViewModel" class="container">
    @Html.HiddenFor(m => m.errorMessage)
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Inventory Excel Upload</h2>
    </div>
    <div class="card">
        <div class="card-header">
        </div>
        <div class="card-body card-padding">
            <div class="row">

                <div class="col-sm-6" style="padding-bottom:40px;">
                    <p>Vendor Master Merchandise Category</p>
                    <a href="@Url.Action("DownloadVendorMasterMapCategoryExcel", "InventoryExcelUpload")" class="btn bgm-orange waves-effect">
                        <i class="zmdi zmdi-download zmdi-hc-fw"></i>
                    </a>

                    @using (Html.BeginForm("UploadExcelForVendorMerchandiseCategory", "InventoryExcelUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <form id="FormVendorMasterMapCategoryExcel" method="post">
                            <br /><br />
                            <div class="form-group">
                                <label class="col-sm-3 control-label" style="padding: 11px 28px;" for="inputEmail3"><span style="color:red;">*</span>Upload Excel</label>
                                <div class="fileinput fileinput-new" data-provides="fileinput" style="padding-top: 11px;">
                                    <span class="btn btn-primary btn-file m-r-10">
                                        <span class="fileinput-new">Choose File</span>
                                        <span class="fileinput-exists" style="padding-top: 11px;">Choose File</span>
                                        @Html.FileFor(model => model.ExcelFile)
                                    </span>
                                    <span class="fileinput-filename"></span>
                                    <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="top:18px;">&times;</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-sm m-t-10 waves-effect" style="margin-left:3%;" id="CreateVendorMasterMapCategoryExcel" type="button" onclick="this.disabled = true; this.text = 'Sending, please wait...'; this.form.submit();">@Resources.ButtonAction_Submit</button>
                            </div>
                        </form>
                    }
                </div>
                <div class="col-sm-6" style="padding-bottom:40px;">
                    <p>Item Master Merchandise Category</p>
                    <a href="@Url.Action("DownloadItemMasterMapCategoryExcel", "InventoryExcelUpload")" class="btn bgm-orange waves-effect">
                        <i class="zmdi zmdi-download zmdi-hc-fw"></i>
                    </a>
                    @using (Html.BeginForm("UploadExcelForItemMasterMapCategoryExcel", "InventoryExcelUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <form id="FormItemMasterMapCategoryExcel" method="post">
                            <br /><br />
                            <div class="form-group">
                                <label class="col-sm-3 control-label" style="padding: 11px 28px;" for="inputEmail3"><span style="color:red;">*</span>Upload Excel</label>
                                <div class="fileinput fileinput-new" data-provides="fileinput" style="padding-top: 11px;">
                                    <span class="btn btn-primary btn-file m-r-10">
                                        <span class="fileinput-new">Choose File</span>
                                        <span class="fileinput-exists" style="padding-top: 11px;">Choose File</span>
                                        @Html.FileFor(model => model.ExcelFile)
                                    </span>
                                    <span class="fileinput-filename"></span>
                                    <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="top:18px;">&times;</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-sm m-t-10 waves-effect" style="margin-left:3%;" id="CreateItemMasterMapCategoryExcel" type="button" onclick="this.disabled = true; this.text = 'Sending, please wait...'; this.form.submit();">@Resources.ButtonAction_Submit</button>
                            </div>
                        </form>
                    }
                </div>
                <div class="col-sm-6" style="padding-bottom:20px;">
                    <p>Item Master Price</p>
                    <a href="@Url.Action("Index", "ItemPrice")" class="btn bgm-orange waves-effect">
                        <i class="zmdi zmdi-download zmdi-hc-fw"></i>
                    </a>
                    @using (Html.BeginForm("UploadExcelForPriceReport", "InventoryExcelUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <form id="FormItemMasterPriceExcel" method="post">
                            <br /><br />
                            <div class="form-group">
                                <label class="col-sm-3 control-label" style="padding: 11px 28px;" for="inputEmail3"><span style="color:red;">*</span>Upload Excel</label>
                                <div class="fileinput fileinput-new" data-provides="fileinput" style="padding-top: 11px;">
                                    <span class="btn btn-primary btn-file m-r-10">
                                        <span class="fileinput-new">Choose File</span>
                                        <span class="fileinput-exists" style="padding-top: 11px;">Choose File</span>
                                        @Html.FileFor(model => model.ExcelFile)
                                    </span>
                                    <span class="fileinput-filename"></span>
                                    <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="top:18px;">&times;</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-sm m-t-10 waves-effect" style="margin-left:3%;" id="CreateItemMasterPriceExcel" type="button" onclick="this.disabled = true; this.text = 'Sending, please wait...'; this.form.submit();">@Resources.ButtonAction_Submit</button>
                            </div>
                        </form>
                    }
                </div>
                <div class="col-sm-6" style="padding-bottom:20px;">
                    <p>Item Master Store Data</p>
                    <a href="@Url.Action("DownloadItemMasterStoreDataExcel", "InventoryExcelUpload")" class="btn bgm-orange waves-effect">
                        <i class="zmdi zmdi-download zmdi-hc-fw"></i>
                    </a>
                    @using (Html.BeginForm("UploadExcelForItemMasterStoreDataExcel", "InventoryExcelUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <form id="FormItemMasterStoreDateExcel" method="post">
                            <br /><br />
                            <div class="form-group">
                                <label class="col-sm-3 control-label" style="padding: 11px 28px;" for="inputEmail3"><span style="color:red;">*</span>Upload Excel</label>
                                <div class="fileinput fileinput-new" data-provides="fileinput" style="padding-top: 11px;">
                                    <span class="btn btn-primary btn-file m-r-10">
                                        <span class="fileinput-new">Choose File</span>
                                        <span class="fileinput-exists" style="padding-top: 11px;">Choose File</span>
                                        @Html.FileFor(model => model.ExcelFile)
                                    </span>
                                    <span class="fileinput-filename"></span>
                                    <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="top:18px;">&times;</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-sm m-t-10 waves-effect" style="margin-left:3%;" id="CreateItemMasterStoreDateExcel" type="button" onclick="this.disabled = true; this.text = 'Sending, please wait...'; this.form.submit();">@Resources.ButtonAction_Submit</button>
                            </div>
                        </form>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Content/Theme/vendors/fileinput/fileinput.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //GeneralItemMaster.Initialize();
        if ($('input[name=errorMessage]').val() != "NoMessage") {
            var splitedMsg = ($('input[name=errorMessage]').val()).split(',');
            notify(splitedMsg[0], splitedMsg[1]);
            $('input[name=errorMessage]').val("NoMessage");
        }
    });
</script>
