@model AERP.ViewModel.SaleContractEmployeeAdvancesViewModel

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Add Employee Advances</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateSaleContractEmployeeAdvances">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="col-sm-12">
                    <div class="col-sm-6">

                        @Html.HiddenFor(m => m.ContractEmployeeMasterID)
                        @Html.LabelFor(model => model.ContractEmployeeMasterName, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.ContractEmployeeMasterName, new { @class = "form-control",disabled="" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ContractEmployeeMasterName)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.TransactionDate, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.TransactionDate, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.TransactionDate)
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.AdvanceAmount, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.AdvanceAmount, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.AdvanceAmount)
                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.PaymentMode, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.DropDownListFor(model => model.PaymentMode, (SelectList)ViewBag.PaymentModeList, new { @class = "form-control input-sm" })
                        </div>
                        @Html.ValidationMessageFor(model => model.PaymentMode)
                    </div>

                </div>
                
                <div class="form-group" style="margin-left: 2%; ">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateSaleContractEmployeeAdvancesRecord" type="button" />
                    <input name="" id="reset" type="submit" class="btn btn-default" value="@Resources.ButtonAction_Reset" />
                </div>
            </form>

        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        SaleContractEmployeeAdvances.Initialize();

        $('#TransactionDate').datetimepicker({
            format: 'DD MMMM YYYY',
            maxDate: moment(),
            ignoreReadonly: true,
        })
    });
</script>



