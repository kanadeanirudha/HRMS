@model AERP.ViewModel.SaleContractMachineMasterViewModel

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Machine</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateSaleContractMachineMaster">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.HiddenFor(m => m.CentreCode)
                        @Html.HiddenFor(m => m.ItemNumber)
                        @Html.LabelFor(model => model.ItemDescription, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.ItemDescription, new { @class = "form-control", maxlength = "60", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ItemDescription)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.Name, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", maxlength = "50" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.SerialNumber, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.SerialNumber, new { @class = "form-control", maxlength = "50" })
                        </div>
                        @Html.ValidationMessageFor(model => model.SerialNumber)
                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.PurchaseDate, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.PurchaseDate, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.PurchaseDate)
                    </div>

                </div>
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.NextMaintanceDate, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.NextMaintanceDate, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.NextMaintanceDate)
                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.MachineType, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.DropDownListFor(model => model.MachineType, (SelectList)ViewBag.MachineTypeList, new { @class = "form-control input-sm" })
                        </div>
                        @Html.ValidationMessageFor(model => model.MachineType)
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.MachineUseFor, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.MachineUseFor, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.MachineUseFor)
                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.ModelNumber, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.ModelNumber, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ModelNumber)
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.MakeBy, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.MakeBy, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.MakeBy)
                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.PurchaseCost, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.PurchaseCost, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.PurchaseCost)
                    </div>
                </div>
                <div class="form-group" style="margin-left: 2%; ">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateSaleContractMachineMasterRecord" type="button" />
                    <input name="" id="reset" type="submit" class="btn btn-default" value="@Resources.ButtonAction_Reset" />
                </div>
            </form>

        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>



<script type="text/javascript">
    $(document).ready(function () {
        SaleContractMachineMaster.Initialize();
    });
</script>



