@model AERP.ViewModel.SaleContractMachineMasterViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .mfp-content {
        width: 60%;
    }
</style>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
<script src="~/Content/Theme/vendors/bower_components/typeahead.js/dist/typeahead.bundle.js"></script>
<script src="@Url.Content("~/Scripts/AERP_Scripts/Contract/SaleContractMachineMaster.js")" type="text/javascript"></script>

<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Machine Master</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-header">
            <ul class="actions"  style="display:none;">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown" title="Add New">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            <a class="mfpAjaxModal" id="btnCreateList" href="@Url.Action("Create", "SaleContractMachineMaster")">
                                <i class="zmdi zmdi-plus-square"></i> &nbsp; @Resources.DisplayName_AddNew
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="card-body card-padding">
            <form class="row" role="form">
                <div class="col-sm-6">
                    <div class="form-group fg-line select">
                        @Html.LabelFor(model => model.SelectedCentreCode, new { })
                        @Html.DropDownListFor(model => model.SelectedCentreCode, Model.ListGetAdminRoleApplicableCentreItems, "---Select Centre ---", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Centre Name*" })
                    </div>
                </div>
                <div class="col-sm-2">
                    <button type="button" style="margin-top:30px" class="btn btn-primary" id="btnShowList">@Resources.GlobalProperties_ShowList</button>
                </div>
            </form>
        </div>
    </div>

    <div id="ListViewModel"> </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        SaleContractMachineMaster.Initialize();
    });
</script>
