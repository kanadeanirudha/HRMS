@model AERP.ViewModel.SaleContractRecieptViewModel
<script src="@Url.Content("~/Scripts/fnGetColumnData.js")" type="text/javascript"></script>

<div class="block-header" style="display:none">
    <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Manage Contract Reciept</h2>
</div>
<div class="card">
    <div class="card-header" style="display:none">
        <ul class="actions">
            <li class="dropdown">
                <a href="" data-toggle="dropdown">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li>
                        <a class="mfpAjaxModal" title="Add New" href="@Url.Action("Create","SaleContractReciept")">
                            <i class="zmdi zmdi-plus-square"></i>&nbsp;Add New
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="bootgrid-header container-fluid" id="data-table-command-header">
        <div class="row">
            <div class="col-sm-12 actionBar">
                <div class="search form-group">
                    <div class="input-group">
                        <span class="zmdi icon input-group-addon glyphicon-search"></span>
                        <input type="text" id="UserSearch" placeholder="Search" class="search-field form-control">
                    </div>
                </div>
                <div class="actions btn-group">
                    @*   <button title="Refresh" type="button" class="btn btn-default">
                            <span class="zmdi icon zmdi zmdi-refresh zmdi-hc-fw"></span>
                        </button>*@
                    <div class="dropdown btn-group">
                        <button data-toggle="dropdown" type="button" class="btn btn-default dropdown-toggle">
                            <span class="dropdown-text" id="tblDisplayRowLength">@Resources.GlobalProperties_10</span> <span class="caret"></span>
                        </button>
                        <ul role="menu" style="cursor: pointer" id="showrecords" class="dropdown-menu pull-right">
                            <li class="active" aria-selected="true">
                                <a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_10">@Resources.GlobalProperties_10</a>
                            </li>
                            <li aria-selected="false">
                                <a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_25">@Resources.GlobalProperties_25</a>
                            </li>
                            <li aria-selected="false"><a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_50">@Resources.GlobalProperties_50</a></li>
                            @*<li aria-selected="false"><a class="dropdown-item dropdown-item-button" data-action="-1">All</a></li>*@
                        </ul>
                    </div>
                    <div class="dropdown btn-group">
                        <button data-toggle="dropdown" type="button" class="btn btn-default dropdown-toggle" aria-expanded="false">
                            <span class="dropdown-text">
                                <span class="zmdi icon zmdi-view-module"></span>
                            </span><span class="caret"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table id="myDataTable" class="table table-striped table-vmiddle table-responsive ">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Voucher Number</th>
                <th>Amount</th>
                <th>Transaction Mode</th>
                <th width="15%" align="center">@Resources.TableHeaders_Action</th>
            </tr>
        </thead>
    </table>

</div>


<script type="text/javascript">

    $(document).ready(function () {
        var oTable;
        SaleContractReciept.Initialize();
        oTable = $('#myDataTable').DataTable({
            "bServerSide": true,
            "sAjaxSource": "SaleContractReciept/AjaxHandler",
            "bJQueryUI": true,
            "sScrollY": false,
            "bProcessing": true,
            "order": [[0, "desc"]],
            "sPaginationType": "full_numbers",
            "oLanguage": {
                "sInfoEmpty": "No entries to show",
            },
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "TransactionFromDate", "value": $("#TransactionFromDate").val() });
                aoData.push({ "name": "TransactionUptoDate", "value": $("#TransactionUptoDate").val() });

            },
            "columnDefs": [
                            {
                                "visible": false, "targets": 0,
                            },
                            {
                                 "targets": 1,
                                 "data": null,
                                 "render": function (data, type, full, meta) {
                                     var result = null;
                                     if (data[01] != null) {

                                         result = "<p  style=' height:5px;width:200px;'>" + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; " + data[0] + "</p>";


                                     }
                                     return result;
                                 }
                             },
                            {
                                "targets": 2,
                                "bSortable": false,
                                 "data": null,
                                 "render": function (data, type, full, meta) {
                                     var result = null;
                                     if (data[1] != null) {

                                         result = "<p  style=' height:5px;width:200px;'>" + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; " + data[1] + "</p>";


                                     }
                                     return result;
                                 }
                             },

                              {
                                  "visible": true, "targets": 3,

                                  "bSortable": false,
                                  "data": null,
                                  "render": function (data, type, full, meta) {
                                      var chkStatus = '';
                                      if (data[2] == "1") {
                                          chkStatus = 'Cash';
                                      }
                                      else {
                                          chkStatus = 'Bank';
                                      }
                                      var result = "<p  style='height:5px;'>" + chkStatus;

                                      return result;
                                  }
                              },


                            {
                                "targets": 4,
                                "bSortable": false,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result = null, result1 = null, result2 = null;

                                    if (data[0] != null) {
                                        var result1 = '@Html.ActionLink("ViewDetails1", "ViewDetails", new { InvoiceTrackingMasterID = "InvoiceTrackingMasterID1" }, new { @class = "mfpAjaxModal btn btn-default waves-effect" })';
                                        result1 = result1.replace('InvoiceTrackingMasterID1', data[7]);
                                       result1 = result1.replace("ViewDetails1", '<span class=\"zmdi zmdi-view-toc\" title =\"@Resources.ToolTip_View\"></span>');
                                        var result = "<p  style=''>" + result1 + "</p>";
                                        return result;

                                    }
                                    else
                                    {
                                        return null;
                                    }

                                }
                            }

            ],

            "drawCallback": function (settings) {
                debugger;
                var api = this.api();
                var rows = api.rows({ page: 'current' }).nodes();
                var last = null;
                var table = $('#myDataTable').dataTable();
                var groupArray = '';
                api.column(1, { page: 'current' }).data().each(function (group, i) {

                    var array = String(group).split(',');

                    if (last !== array[3] + '-' + array[4]) {

                        $(rows).eq(i).before(

                            '<tr class="group"><td colspan="4"  style="font-weight:bold;font-size:12px;font-family: verdana;background-color:rgba(128,128,128,0.2);color:#000;" >' + array[5].replace("#", ",") + (array[6] != "" ? ' (' + array[6] + ')' : '').replace("#", ",") + '</td></tr>'
                         
                        );
                        last = array[3] + '-' + array[4];
                    }
                });
            }
        });

        DataTableSettings(oTable, 'myDataTable', 'toggleTableColumn');
    });


</script>

