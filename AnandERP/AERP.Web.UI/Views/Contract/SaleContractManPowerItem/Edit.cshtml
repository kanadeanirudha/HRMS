                @Html.HiddenFor(model => model.ID)

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.CountryName, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.CountryName, new { @class = "form-control", maxlength = "60", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CountryName)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.ContryCode, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.ContryCode, new { @class = "form-control", maxlength = "5", style = " text-transform:uppercase" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ContryCode)
                    </div>
                </div>


                <div class="col-sm-12">

                    @if (Model.GeneralCountryMasterDTO.DefaultFlag)
                    {
                        <div class="col-sm-6">
                            <div class="checkbox m-b-15" style="padding-top:8%;">
                                <label>
                                    <input type="checkbox" id="DefaultFlag" checked>
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.DefaultFlag)
                                </label>
                            </div>
                            @Html.ValidationMessageFor(model => model.DefaultFlag)
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-6">
                            <div class="checkbox m-b-15" style="padding-top:8%;">
                                <label>
                                    <input type="checkbox" id="DefaultFlag">
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.DefaultFlag)
                                </label>
                            </div>
                            @Html.ValidationMessageFor(model => model.DefaultFlag)
                        </div>

                    }

                </div>
                
            </form>



        </div>
    </div>

}
</div>
