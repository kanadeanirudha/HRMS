@model AERP.ViewModel.GeneralOperatorRelatedRoleViewModel
<div id="custom-content">
    <div class="block-header">
        
   @Html.HiddenFor(model => model.CentreCode)
        @Html.HiddenFor(model => model.SelectedCentreCode)
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;Allocate Role</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateGeneralOperatorRelatedRole" role="form" class="row">
                <div class="form-group col-sm-12">
                    <label class="control-label col-sm-6" style="padding-top: 11px 10px; margin-left: 1%;" for="inputEmail3"><span style="color:red">*</span>@Html.LabelFor(model => model.AdminRoleMasterID, new { @class = "" })</label>
                    <div class="col-sm-12">
                        <div class="fg-line">
                            @Html.DropDownListFor(model => model.AdminRoleMasterID, (SelectList)ViewBag.AdminRoleCodeList, "--------Select Role -------", new { @class = "form-control select" })
                        </div>
                        @Html.ValidationMessageFor(model => model.AdminRoleMasterID)
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" style="margin-left:2%" value="@Resources.ButtonAction_Submit" id="CreateGeneralOperatorRelatedRoleRecord" type="button" />
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralOperatorRelatedRole.Initialize();
    });
</script>

