@model AMS.ViewModel.InventoryVariationMasterViewModel
@Html.HiddenFor(model => model.InventoryRecipeMasterId)
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Recipe Variation</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateInventoryVariationMaster" role="form">
               
                <div class="col-sm-12">
                    <div class="form-group select fg-line">
                        @Html.LabelFor(model => model.RecipeTitle, new { })
                        @Html.DropDownListFor(model => model.RecipeTitle, (SelectList)ViewBag.InventoryRecipeList, "---Select Recipe Title ---", new { @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.RecipeTitle)
                </div>
                 <div class="col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.RecipeVariationTitle, new { })
                        @Html.TextBoxFor(model => model.RecipeVariationTitle, new { maxlength = "60", @class = "form-control input-sm typeahead" })
                    </div>
                    @Html.ValidationMessageFor(model => model.RecipeVariationTitle)
                </div>
               
              
               
               <div class="form-group">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateInventoryVariationMasterRecord" type="button" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        InventoryVariationMaster.Initialize();
    });
</script>
