@model AMS.ViewModel.InventoryPhysicalStockMasterAndTransactionViewModel

<script src="@Url.Content("~/Scripts/fnGetColumnData.js")" type="text/javascript"></script>
<div class="block-header">
    <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Manage Physical Stock Details</h2>
</div>

<div class="card">
    <div class="card-header">
        <div id="divAddbtn">
            <ul class="actions">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-right">
                        <li id="divAddbtn">
                            <a class="mfpAjaxModal" title="Add New" href="@Url.Action("Create", "InventoryPhysicalStockMasterAndTransaction")">
                                <i class="zmdi zmdi-plus-square"></i>&nbsp;Add New
                            </a>
                        </li>
                    </ul>

                </li>
            </ul>
        </div>
    </div>
    <div class="card-body card-padding">
        <form class="row" role="form">
            @*@Html.HiddenFor(m => m.Balancesheet)*@
         
            <div class="col-sm-5">
                <div class="select form-group fg-line">
                    @*@Html.DropDownListFor(m => m.SelectedCentreCode, Model.ListGetAdminRoleApplicableCentreItems, "--------Select Centre-------", new { id = "InventoryLocationMasterID", @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = " Centre Name" })*@
                    @Html.DropDownListFor(m => m.InventoryLocationMasterID, Model.LocationListItems, "-----Select Location-----", new { id = "InventoryLocationMasterID", @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", })
                   </div>
            </div>
            <div class="col-sm-2">
                <input type="button" value="@Resources.GlobalProperties_ShowList" class="btn btn-primary btn-sm m-t-5" id="btnShowList" />
            </div>
        </form>
    </div>
    <div class="bootgrid-header container-fluid" id="data-table-command-header">
        <div class="row">
            <div class="col-sm-12 actionBar">
                <div class="search form-group">
                    <div class="input-group">
                        <span class="zmdi icon input-group-addon glyphicon-search"></span>
                        <input type="text" id="UserSearch" placeholder="Search" class="search-field form-control">
                    </div>
                </div>
                <div class="actions btn-group">
                    <div class="dropdown btn-group">
                        <button data-toggle="dropdown" type="button" class="btn btn-default dropdown-toggle">
                            <span class="dropdown-text" id="tblDisplayRowLength">@Resources.GlobalProperties_10</span> <span class="caret"></span>
                        </button>
                        <ul role="menu" style="cursor: pointer" id="showrecords" class="dropdown-menu pull-right">
                            <li class="active" aria-selected="true">
                                <a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_10">@Resources.GlobalProperties_10</a>
                            </li>
                            <li aria-selected="false">
                                <a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_25">@Resources.GlobalProperties_25</a>
                            </li>
                            <li aria-selected="false"><a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_50">@Resources.GlobalProperties_50</a></li>
                        </ul>
                    </div>
                    <div class="dropdown btn-group">
                        <button data-toggle="dropdown" type="button" class="btn btn-default dropdown-toggle" aria-expanded="false">
                            <span class="dropdown-text">
                                <span class="zmdi icon zmdi-view-module"></span>
                            </span><span class="caret"></span>
                        </button>
                        <ul role="menu" id="toggleTableColumn" class="dropdown-menu pull-right">
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="0" name="TransactionDate">
                                        Transaction Date<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="1" name="Amount">
                                     Amount <i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="2" name="Action">
                                        @Resources.TableHeaders_Action<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table id="myDataTable" class="table table-striped table-vmiddle table-responsive ">
        <thead>
            <tr>
                <th>Transaction Date</th>
                <th>Amount</th>
                <th>@Resources.TableHeaders_Action</th>
            </tr>
        </thead>
    </table>

</div>

<script type="text/javascript">

    $(document).ready(function () {
        var oTable;
        InventoryPhysicalStockMasterAndTransaction.Initialize();
        //$("#InventoryLocationMasterID").tooltip();
        oTable = $('#myDataTable').DataTable({
            "bServerSide": true,
            "sAjaxSource": "InventoryPhysicalStockMasterAndTransaction/AjaxHandler",
            "bJQueryUI": true,
            "sScrollY": false,
            "bProcessing": true,
            "sPaginationType": "full_numbers",
            "oLanguage": {
                "sInfoEmpty": "No entries to show",
            },
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "Balancesheet", "value": $("#selectedBalsheetID").val() }),
                aoData.push({ "name": "InventoryLocationMasterID", "value": $("#InventoryLocationMasterID").val() });
            },
            "columnDefs": [
                            {
                                "targets": 0,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result = "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; " + data[1];
                                    return result;
                                }
                            },
                            {
                                "targets": 1,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result = "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; " + data[2];
                                    return result;
                                }
                            },
                                {
                                    "targets": 2,
                                    "bSortable": false,
                                    "data": null,
                                    "render": function (data, type, full, meta) {
                                        var result = null;
                                        if (data[0] != "" ||data[0]!=null) {
                                            result = '@Html.ActionLink("ViewDetails1", "ViewDetails", new { ID = "InventoryPhysicalStockTransactionID" }, new { @class = "mfpAjaxModal btn btn-default waves-effect" })';
                                            result = result.replace('InventoryPhysicalStockTransactionID', data[3]);
                                            result = result.replace("ViewDetails1", '<span class=\"zmdi zmdi-edit\" title =\"@Resources.ToolTip_Edit\"></span>');

                                            @*result1 = '@Html.ActionLink("ViewDetails1", "ViewDetails", new { ID = "LocationID1" }, new { @class = "mfpAjaxModal btn btn-default waves-effect" })';
                                            result1 = result1.replace('LocationID1', data[2]);
                                            result1 = result1.replace("ViewDetails1", '<span class=\"zmdi zmdi-view-toc\" title =\"@Resources.ToolTip_View\"></span>');*@
                                        }
                                        else {
                                            result = null
                                        }
                                        return result;
                                    }
                                }
            ],
        });

        //DataTableSettings(oTable);
        DataTableSettings(oTable, "myDataTable",'toggleTableColumn');

    });


</script>