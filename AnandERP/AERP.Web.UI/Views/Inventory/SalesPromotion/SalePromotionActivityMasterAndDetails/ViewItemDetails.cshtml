@model AMS.ViewModel.SalePromotionActivityMasterAndDetailsViewModel
<input type="hidden" id="TaskCode" value="GeneralItemSalesData" />
@Html.HiddenFor(model => model.PlanTypeCode)
<div id="custom-content">
    <div class="block-header">
        @*@Html.HiddenFor(model => model.IsDefaultCount)*@
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;View Item List For (@Model.PlanTypeCode)</h2>
    </div>
    <div class="card" style="overflow: auto;">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateSalePromotionActivity" role="form" class="row">
                <div class="col-sm-12 row">
                    <div id="ListViewModel1" class="table-responsive">
                        <div id="DivAddRowTable">
                            <table id="tblData" class="table">
                                <thead>
                                    <tr>

                                        <th>Item Description</th>
                                        <th>UOM</th>
                                        @if (@Model.PlanTypeCode == "ProductConcessionFree")
                                        {
                                            <th style="display:none;">Discount in (%)</th>
                                        }
                                        else
                                        {
                                            <th>Discount in (%)</th> }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.GetItemList)
                                    {

                                        <tr>
                                            <td>@item.ItemDescription<input type="text" id="ItemDescription" style="display:none" value="@item.ItemDescription"></td>
                                            <td>@item.UOMCode<input type="text" id="UOMCode" style="display:none" value="@item.UOMCode"></td>
                                            @if (@Model.PlanTypeCode == "ProductConcessionFree")
                                            {
                                                <td style="display:none;">@item.DiscountInPercentage<input type="text" id="DiscountInPercentage" style="display:none" value="@item.DiscountInPercentage"></td>
                                            }
                                            else
                                            {
                                                <td>@item.DiscountInPercentage<input type="text" id="DiscountInPercentage" style="display:none" value="@item.DiscountInPercentage"></td>
                                            }
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {

        SalePromotionActivityMasterAndDetails.Initialize();

    });
</script>
