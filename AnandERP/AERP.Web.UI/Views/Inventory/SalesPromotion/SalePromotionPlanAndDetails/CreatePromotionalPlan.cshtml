@model AMS.ViewModel.SalePromotionPlanAndDetailsViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;Sales Promotion Plan</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateSalePromotionPlanAndDetails" role="form" class="row">
                <div class="form-group col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.PlanTypeName, new { })
                        @Html.TextBoxFor(model => model.PlanTypeName, new { maxlength = "100", @class = "form-control input-sm " })

                    </div>
                    @Html.ValidationMessageFor(model => model.PlanTypeName)
                </div>
                <div class="form-group col-sm-6">
                    <div class="form-group select fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.PlanTypeCode, new { })
                        @*@Html.TextBoxFor(model => model.PlanTypeCode, new { maxlength = "50", @class = "form-control input-sm " })*@
                        @Html.DropDownListFor(model => model.PlanTypeCode, ViewData["PlanCode"] as IEnumerable<SelectListItem>, new { style = "", @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.PlanTypeCode)
                </div>
              

                <div class="form-group col-sm-12">
                    <input class="btn btn-primary" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="CreateSalePromotionPlanAndDetailsRecord" type="button" />
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        SalePromotionPlanAndDetails.Initialize();
    });
</script>


