@model AERP.ViewModel.AddCentreOpeningBalanceForInventoryViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .mfp-content {
        width: 40%;
    }
</style>
<script src="@Url.Content("~/Scripts/AERP_Scripts/Inventory/AddCentreOpeningBalanceForInventory.js")" type="text/javascript"></script>

<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp; Opening Balance For Inventory</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-header">
            <ul class="actions">
                <li class="dropdown" style="display:none">
                    <a href="" data-toggle="dropdown" title="Add New">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            <a class="mfpAjaxModal" href="@Url.Action("Create", "SalesEnquiryMasterAndDetails")">
                                <i class="zmdi zmdi-plus-square"></i> &nbsp; @Resources.DisplayName_AddNew
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="card-body card-padding">
            <div class="row">
                <div class="col-sm-4">
                    Location
                    <div class="form-group fg-line">
                        <div class="form-group fg-line select">
                            @Html.DropDownList("GeneralLocationList", ViewData["GeneralLocationList"] as List<SelectListItem>, "---Select Location ---", new { @class = "form-control input-sm" })
                        </div>
                    </div>
                </div>


                <div class="col-sm-1" style="margin-top:10px;">
                    <button type="button" class="btn btn-primary" id="btnShowListforList">@Resources.GlobalProperties_ShowList</button>
                </div>
            </div>
        </div>
    </div>
    <div id="ListViewModel"> </div>

</div>
<script type="text/javascript">
    $(document).ready(function () {
        AddCentreOpeningBalanceForInventory.Initialize();
        //AddCentreOpeningBalanceForInventory.LoadList();

    });
</script>




