@model AERP.ViewModel.GeneralMovementTypeViewModel
<div id="custom-content">
    <div class="block-header">
        @Html.HiddenFor(model => @Model.ID)
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;Movement Type Rules</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateGeneralMovementTypeRules" role="form" class="row">
               
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.MovementCode, new { })
                            @Html.TextBoxFor(model => model.MovementCode, new {  @class = "form-control input-sm typeahead", disabled = "disabled" })
                             </div>
                      
                    </div>
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.MovementType, new { })
                            @Html.TextBoxFor(model => model.MovementType, new { @class = "form-control input-sm typeahead", disabled = "disabled" })
                        </div>
                       
                    </div>
               
                <div class="form-group col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.TransactionType, new { })
                        @Html.DropDownList("TransactionType", ViewData["TransactionType"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Transaction Type*" })

                    </div>
                    @Html.ValidationMessageFor(model => model.TransactionType)
                </div>
                <div class="form-group col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.Direction, new { })
                        @Html.DropDownList("Direction", ViewData["Direction"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Direction*" })

                    </div>
                    @Html.ValidationMessageFor(model => model.Direction)
                </div>
                <div class="form-group col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.Behaviour, new { })
                        @Html.DropDownList("Behaviour", ViewData["Behaviour"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Behaviour*" })

                    </div>
                    @Html.ValidationMessageFor(model => model.Behaviour)
                </div>
                
                <div class="form-group col-sm-6" id="Action">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.Action, new { })
                        @Html.DropDownList("Action", ViewData["Action"] as List<SelectListItem>, "--Select Action--", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Action*" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Action)
                </div>

                <div class="form-group col-sm-12">
                    <input class="btn btn-primary" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="CreateGeneralMovementTypeRulesRecord" type="button" />
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralMovementType.Initialize();
    });
</script>

