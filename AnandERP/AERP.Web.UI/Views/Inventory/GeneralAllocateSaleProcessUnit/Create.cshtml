@model AERP.ViewModel.GeneralAllocateSaleProcessUnitViewModel
<script src="@Url.Content("~/Scripts/AERP_Scripts/Invntory/GeneralAllocateSaleProcessUnit.js")" type="text/javascript"></script>
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Process Unit</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateGeneralAllocateSaleProcessUnit" role="form">
                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        @Html.HiddenFor(model => model.SalesUnitID)
                        @Html.HiddenFor(model => model.CentreCode)
                        @Html.LabelFor(model => model.UnitName, new { })
                        @Html.TextBoxFor(model => model.UnitName, new { maxlength = "80", @class = "form-control input-sm typeahead", disabled = "disabled" })
                    </div>
                    @Html.ValidationMessageFor(model => model.UnitName)
                </div>


                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.SalesUnitProssessID, new { })
                        @Html.DropDownListFor(model => model.SalesUnitProssessID, (SelectList)ViewBag.GeneralAllocateSaleProcessUnitList, new { @class = "form-control input-sm", data_toggle = "tooltip", data_placement = "top", data_original_title = "" })
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        <label><span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.AllocatedFromDate, new { })</label>
                        @Html.TextBoxFor(m => m.AllocatedFromDate, new { @class = "form-control input-sm date-picker" })
                    </div>
                    @Html.ValidationMessageFor(model => model.AllocatedFromDate)
                </div>

                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        <label>@Html.LabelFor(model => model.AllocatedUptoDate, new { })</label>
                        @Html.TextBoxFor(m => m.AllocatedUptoDate, new { @class = "form-control input-sm date-picker" })
                    </div>

                </div>


                <div class="form-group" style="margin-left:2%;">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateGeneralAllocateSaleProcessUnitRecord" type="button" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#AllocatedFromDate").datetimepicker({
            format: 'DD MMMM YYYY',
            maxDate: moment(),
        });

        $("#AllocatedFromDate").on("keydown", function () {
            var keycode = (e.keyCode ? e.keyCode : e.which);
            if (keycode != 9) {
                return false;
            }
        });
        $("#AllocatedUptoDate").datetimepicker({
            format: 'DD MMMM YYYY',
            minDate: moment(),
        });

        $("#AllocatedUptoDate").on("keydown", function () {
            var keycode = (e.keyCode ? e.keyCode : e.which);
            if (keycode != 9) {
                return false;
            }
        });

        GeneralAllocateSaleProcessUnit.Initialize();
    });
</script>
