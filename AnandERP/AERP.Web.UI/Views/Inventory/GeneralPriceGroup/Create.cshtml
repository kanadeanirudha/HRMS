@model AERP.ViewModel.GeneralPriceGroupViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;General Price Group</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateGeneralPriceGroup" role="form" class="row">
                <div class="form-group col-sm-12">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.GeneralPriceGroupCode, new { })
                        @Html.TextBoxFor(model => model.GeneralPriceGroupCode, new { maxlength = "15", @class = "form-control input-sm " })

                    </div>
                    @Html.ValidationMessageFor(model => model.GeneralPriceGroupCode)
                </div>
                <div class="form-group col-sm-12">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.GeneralPriceGroupDescription, new { })
                        @Html.TextBoxFor(model => model.GeneralPriceGroupDescription, new { maxlength = "50", @class = "form-control input-sm " })

                    </div>
                    @Html.ValidationMessageFor(model => model.GeneralPriceGroupDescription)
                </div>
                <div class="form-group col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.IsRelatedTo, new { })
                        @Html.DropDownList("IsRelatedTo", ViewData["IsRelatedTo"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Is Related To*" })

                    </div>
                    @Html.ValidationMessageFor(model => model.IsRelatedTo)
                </div>
               
                 <div class="form-group col-sm-12">
                    <input class="btn btn-primary" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="CreateGeneralPriceGroupRecord" type="button" />
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralPriceGroup.Initialize();
    });
</script>

