@model AMS.ViewModel.RestaurantTableMasterViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;Restaurant Table Master</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateRestaurantTableMaster" role="form" class="row">
                <div class="row">
                    <div class="form-group col-sm-4">
                        <div class="form-group fg-line">
                            @*<span style="color:red">*</span>*@
                            @Html.LabelFor(model => model.Name, new { })
                            @Html.TextBoxFor(model => model.Name, new { maxlength = "20", @class = "form-control input-sm " })

                        </div>
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                    <div class="form-group col-sm-4">
                        <div class="form-group fg-line">
                            @*<span style="color:red">*</span>*@
                            @Html.LabelFor(model => model.TableNumber, new { })
                            @Html.TextBoxFor(model => model.TableNumber, new { maxlength = "20", @class = "form-control input-sm " })

                        </div>
                        @Html.ValidationMessageFor(model => model.TableNumber)
                    </div>
                    <div class="form-group col-sm-4">
                        <div class="form-group select fg-line">
                            @*<span style="color:red">*</span>*@
                            @Html.LabelFor(model => model.Shape, new { })
                            @Html.DropDownList("Shape", ViewData["Shape"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Shape*" })

                        </div>
                        @Html.ValidationMessageFor(model => model.Shape)
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-4">
                        <div class="form-group fg-line">
                            @*<span style="color:red">*</span>*@
                            @Html.LabelFor(model => model.MaxCapicity, new { })
                            @Html.TextBoxFor(model => model.MaxCapicity, new { maxlength = "50", @class = "form-control input-sm " })

                        </div>
                        @Html.ValidationMessageFor(model => model.MaxCapicity)
                    </div>
                    <div class="form-group col-sm-4">
                        <div class="form-group fg-line">
                            @*<span style="color:red">*</span>*@
                            @Html.LabelFor(model => model.MinCapacity, new { })
                            @Html.TextBoxFor(model => model.MinCapacity, new { maxlength = "20", @class = "form-control input-sm " })

                        </div>
                        @Html.ValidationMessageFor(model => model.MinCapacity)
                    </div>
                
                </div>
                <div class="form-group col-sm-12">
                    <input class="btn btn-primary" style="margin-left:-2%" value="@Resources.ButtonAction_Submit" id="CreateRestaurantTableMasterRecord" type="button" />
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        RestaurantTableMaster.Initialize();
    });
</script>

