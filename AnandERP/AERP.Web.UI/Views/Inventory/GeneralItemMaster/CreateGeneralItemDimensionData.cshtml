                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <span style="color:red">*</span> @Html.LabelFor(model => model.Height, new { })
                            @Html.TextBoxFor(model => model.Height, new { maxlength = "50", @class = "form-control input-sm ", @Placeholder = "Height in cm" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Height)
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.Volume, new { })
                            @Html.TextBoxFor(model => model.Volume, new { maxlength = "8", @class = "form-control input-sm ", disabled = "disabled",@Value = Math.Round(Model.Volume,2)})
                        </div>
                        @Html.ValidationMessageFor(model => model.Volume)
                    </div>
                    
             </div>
               
               
                @*<div class="form-group col-sm-12">
