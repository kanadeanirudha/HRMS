@*/* -------------------------------------
        JCrop customization
    ---------------------------------------- */*@
<style type="text/css">
    #preview-pane {
        position: absolute;
        right: -360px;
        z-index: 1;
        display: block;
        border: 1px #000 solid;
    }

        #preview-pane .preview-container {
            overflow: hidden;
            width: 350px; /* ToDo - size of the crop window*/
            height: 350px; /* ToDo - size of the crop window*/
        }

    .upload-progress {
        border: 1px #bbb solid;
        padding: 0;
    }

    .upload-percent-value {
        padding-left: 10px;
        position: absolute;
    }

    .upload-percent-bar {
        background-color: #bbb;
        height: 20px;
    }
    .mfp-content {
    width: 85% !important;
}
</style>
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Image Upload</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>

            <section id="avatar-upload-box">
                @using (Ajax.BeginForm("MultipleArticleImageUpload", "GeneralItemMaster",
        new AjaxOptions() { HttpMethod = "POST" },
        new { enctype = "multipart/form-data", id = "avatar-upload-form" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="file" name="files" /><br>
                    <div class="upload-file-notice">Maximum Size: <span id="avatar-max-size"></span> MB</div>
                }
                <div class="upload-progress col-md-6 hidden">
                    <div class="upload-percent-value pull-left">0%</div>
                    <div class="upload-percent-bar pull-left"></div>
                </div>
                <div id="upload-status"></div>
            </section>
            <section id="avatar-crop-box" class="hidden">
                <p>
                    <img src="" id="crop-avatar-target" alt="Uploaded image" />
                    <div id="preview-pane">
                        <div class="preview-container">
                            <img src="" class="jcrop-preview" alt="Preview" />
                        </div>
                    </div>
                </p>
                <p><button class="btn btn-default" onclick=" saveMultipleAvatarImage() ">Save Image</button></p>
            </section>
            <div id="avatar-result" class="hidden">
                <img src="" alt="Final Image" />
            </div>
        </div>
    </div>
</div>
<link href="@Url.Content("~/Content/css/jquery.Jcrop.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery.Jcrop.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.form.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/AERP_Scripts/Inventory/ArticalImageUpload.js") " type="text/javascript"></script>

