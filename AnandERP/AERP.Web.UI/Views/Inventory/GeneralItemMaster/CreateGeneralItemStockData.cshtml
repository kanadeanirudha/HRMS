    @model AERP.ViewModel.GeneralItemMasterViewModel
<div id="custom-content">
    @Html.HiddenFor(model => model.GeneralItemMasterID)
    @Html.HiddenFor(model => model.TaskCode)
    @Html.HiddenFor(model => model.GeneralItemStockDataID)
    <input type="hidden" id="TaskCode" value="GeneralItemStockData" />
    
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateGeneralItemMaster" role="form" class="row">
                <div class="col-sm-6" style="display:none">
                    <div class="form-group select fg-line">
                        @Html.LabelFor(model => model.GLAccountBy, new { })
                        @Html.DropDownList("GLAccountBy", ViewData["GLAccountBy"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "GLAccountBy*" })

                    </div>
                    @Html.ValidationMessageFor(model => model.GLAccountBy)
                </div>
                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.StockUoMCode, new { })
                        @Html.TextBoxFor(model => model.StockUoMCode, new { maxlength = "50", @class = "form-control input-sm " })

                    </div>
                    @Html.ValidationMessageFor(model => model.StockUoMCode)
                </div>
                <div class="col-sm-6" style="display:none">
                    <div class="form-group select fg-line">
                        @Html.LabelFor(model => model.ValuationMethod, new { })
                        @Html.DropDownList("ValuationMethod", ViewData["ValuationMethod"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "ValuationMethod*" })

                    </div>
                    @Html.ValidationMessageFor(model => model.ValuationMethod)
                </div>
                <div class="col-sm-6" style="display:none">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.UomCode, new { })
                        @Html.DropDownListFor(model => model.UomCode, (SelectList)ViewBag.InventoryUoMMasterForUomCodeList, "---Select Purchase Uom Code ---", new { @class = "form-control input-sm" })

                    </div>
                    @Html.ValidationMessageFor(model => model.UomCode)
                </div>
                
                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.MinStock, new { })
                        @Html.TextBoxFor(model => model.MinStock, new { @class = "form-control input-sm typeahead", maxLength = "10" })

                    </div>
                    @Html.ValidationMessageFor(model => model.MinStock)
                </div>

                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.MaxStock, new { })
                        @Html.TextBoxFor(model => model.MaxStock, new { @class = "form-control input-sm typeahead",maxLength = "10" })

                    </div>
                    @Html.ValidationMessageFor(model => model.MaxStock)
                </div>
                
                @*<div class="form-group col-sm-12">
                    <input class="btn btn-primary" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="CreateGeneralItemMasterRecord" type="button" />
                </div>*@

            </form>
        </div>
    </div>
</div>

