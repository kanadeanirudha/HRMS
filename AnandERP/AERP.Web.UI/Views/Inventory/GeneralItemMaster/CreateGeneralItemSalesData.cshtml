@model AERP.ViewModel.GeneralItemMasterViewModel
<input type="hidden" id="TaskCode" value="GeneralItemSalesData" />

@Html.HiddenFor(model => model.GeneralItemMasterID)
@Html.HiddenFor(model => model.TaskCode)
@Html.HiddenFor(model => model.GeneralItemCodeID)


<style>
    .actions > li > a::before, .actions > a::before {
        height: 0;
    }


    .btn-float {
        border-radius: 50%;
        height: 40px;
        line-height: 35px !important;
        width: 40px;
    }

    .mfp-content {
        width: 20%;
    }
</style>


<div id="custom-content">
    <div class="card">
        <div class="card-body card-padding">
            @*<div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>*@
            <form id="FormCreateInventoryUoMGroupAndDetail" role="form" class="row">
                <div class="row col-sm-12" id="SaleUomTab">
                    <div class="col-sm-3" style="display:none">
                        <div class="form-group fg-line">
                            @Html.HiddenFor(model => model.GeneralItemCodeID)
                           @Html.LabelFor(model => model.SaleUoMCode, new { })
                        @*@Html.DropDownListFor(model => model.SaleUoMCode, (SelectList)ViewBag.InventorySaleUomCodeList, "---Select Sale Uom Code ---", new { @class = "form-control input-sm" })*@
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group select fg-line">

                            @Html.LabelFor(model => model.CentreCode, new { })
                            @Html.DropDownListFor(m => m.SelectedCentreCodeForSaleTab, Model.ListGetAdminRoleApplicableCentreItems, "--------Select Centre-------", new { id = "SelectedCentreCodeForSaleTab", @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = " Centre Name" })

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group select fg-line">
                           
                            @Html.LabelFor(model => model.GeneralUnitsID, new { })
                            @*@Html.DropDownListFor(model => model.GeneralUnitsID, (SelectList)ViewBag.GeneralUnitsList, new { @class = "form-control input-sm AddGeneralUnitsID" })*@
                            @Html.DropDownListFor(model => model.GeneralUnitsID, Model.ListGetGeneralUnitsItems, "---Select UomCode ---", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "" })
                        </div>
                    </div>
                    <div class="col-sm-2" style="margin-bottom:2%">
                        <input type="button" value="@Resources.GlobalProperties_ShowList" class="btn btn-primary btn-sm m-t-5" id="btnShowList" style="margin-bottom:2%" />
                    </div>
                <br /><br />
                <div class="col-sm-12 row">
                    <div id="ListViewModel1" class="table-responsive">
                        <div id="DivAddRowTable">
                            <table id="tblData" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Sale Uom Code</th>
                                        <th>Bar Code </th>
                                        <th>Price</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.GeneralItemMasterListForSaleUoMDetails)
                                    {

                                        <tr>
                                            <td>@item.UomCode<input type="text" style="display:none" value="@item.UomCode"></td>
                                            <td>@item.BarCode<input type="text" style="display:none" value="@item.BarCode"></td>
                                            <td>@item.Price<input type="text" style="display:inline;border:1px;" value="@item.Price" maxlength="8" /></td>
                                            
                                        </tr>
                                    }
                                </tbody>
                            </table><br /><br /><br /><br />
                        </div>
                    </div>
                </div>



            </form>

        </div>

    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/fnReloadAjax.js")" type="text/javascript"></script>



<script type="text/javascript">
    GeneralItemMaster.Initialize();

    if (GeneralItemMaster.ResetGeneralUnitsID != null) {
        $(".AddGeneralUnitsID").val(GeneralItemMaster.ResetGeneralUnitsID);
        $("#btnShowList").click();
        GeneralItemMaster.ResetGeneralUnitsID = null;
    }

</script>


