@model AERP.ViewModel.GeneralPurchaseGroupMasterViewModel

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Purchase Group</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateGeneralPurchaseGroupMaster" role="form">
                <div class="col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.PurchaseGroupName, new { })
                        @Html.TextBoxFor(model => model.PurchaseGroupName, new { maxlength = "50", @class = "form-control input-sm typeahead" })
                    </div>
                    @Html.ValidationMessageFor(model => model.PurchaseGroupName)
                </div>

                <div class="col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.PurchaseGroupCode, new { })
                        @Html.TextBoxFor(model => model.PurchaseGroupCode, new { maxlength = "20", @class = "form-control input-sm typeahead" })
                    </div>
                    @Html.ValidationMessageFor(model => model.PurchaseGroupCode)
                </div>

                <div class="form-group">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateGeneralPurchaseGroupMasterRecord" type="button" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralPurchaseGroupMaster.Initialize();
    });
</script>




