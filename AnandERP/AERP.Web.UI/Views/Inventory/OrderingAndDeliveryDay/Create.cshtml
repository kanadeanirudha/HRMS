@model AERP.ViewModel.OrderingAndDeliveryDayViewModel
@*<script src="@Url.Content("~/Scripts/AERP_Scripts/Inventory_1/OrderingAndDeliveryDay.js")" type="text/javascript"></script>*@
<div id="custom-content">
    <style>
        .actions > li > a::before, .actions > a::before {
            height: 0;
        }


        .btn-float {
            border-radius: 50%;
            height: 40px;
            line-height: 35px !important;
            width: 40px;
        }
    </style>

    <div class="block-header">
        @*@Html.HiddenFor(model => model.GeneralUnitsID)*@

        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Ordering And Delivery Day Codes</h2>
    </div>
    <div class="card">

        <div id="displayErrorMessage" role="alert" hidden class="alert">
            <button class="close" type="button"><span aria-hidden="true">×</span></button>
            <p id="messageContent"></p>
        </div>
        <form id="FormCreateOrderingAndDeliveryDay" role="form">


            <div id="divAllocateJob" class="row" style="padding:30px 30px;">
                @*<div class="row" id="check_div" style="height:100%">*@
                <div class="col-sm-1">
                    <div class="form-group fg-line">
                        <label style="margin-top: 2%; margin-bottom: 3%;">
                            @Html.LabelFor(model => model.sunday, new { style = "padding-left: 0px; margin-top:2%;" })

                        </label>
                    </div>
                    <div class="checkbox col-sm-1">
                        <input type="checkbox" value="1" id="Sun" name="Sunday" class="1">
                        <i class="input-helper"></i>

                    </div>
                </div>

                <div class="col-sm-1">
                    <div class="form-group fg-line">
                        <label style="margin-top: 2%; margin-bottom: 3%;">
                            @Html.LabelFor(model => model.monday, new { style = "padding-left: 0px; margin-top:2%;" })

                        </label>
                    </div>
                    <div class="checkbox col-sm-1">
                        <input type="checkbox" value="2" id="Mon" name="Monday" class="2">
                        <i class="input-helper"></i>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group fg-line">
                        <label style="margin-top: 2%; margin-bottom: 3%;">
                            @Html.LabelFor(model => model.tuesday, new { style = "padding-left: 0px; margin-top:2%;" })

                        </label>
                    </div>
                    <div class="checkbox col-sm-1">
                        <input type="checkbox" value="3" id="Tue" name="Tuesday" class="3">
                        <i class="input-helper"></i>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group fg-line">
                        <label style="margin-top: 2%; margin-bottom: 3%;">
                            @Html.LabelFor(model => model.wednesday, new { style = "padding-left: 0px; margin-top:2%;" })

                        </label>
                    </div>
                    <div class="checkbox col-sm-1">
                        <input type="checkbox" value="4" id="Wed" name="Wednesday" class="4">
                        <i class="input-helper"></i>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group fg-line">
                        <label style="margin-top: 2%; margin-bottom: 3%;">
                            @Html.LabelFor(model => model.thursday, new { style = "padding-left: 0px; margin-top:2%;" })

                        </label>
                    </div>
                    <div class="checkbox col-sm-1">
                        <input type="checkbox" value="5" id="Thu" name="Thursday" class="5">
                        <i class="input-helper"></i>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group fg-line">
                        <label style="margin-top: 2%; margin-bottom: 3%;">
                            @Html.LabelFor(model => model.friday, new { style = "padding-left: 0px; margin-top:2%;" })

                        </label>
                    </div>
                    <div class="checkbox col-sm-1">
                        <input type="checkbox" value="6" id="Fri" name="Friday" class="6">
                        <i class="input-helper"></i>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group fg-line">
                        <label style="margin-top: 2%; margin-bottom: 3%;">
                            @Html.LabelFor(model => model.saturday, new { style = "padding-left: 0px; margin-top:2%;" })

                        </label>
                    </div>
                    <div class="checkbox col-sm-1">
                        <input type="checkbox" value="7" id="Sat" name="Saturday" class="7">
                        <i class="input-helper"></i>
                    </div>
                </div>
                <div class="col-sm-2">

                    <div class="checkbox col-sm-1" style="padding-top:25px;">
                        <button type="button" title="Add row" class=" btn btn-primary waves-effect" id="btnAdd">Add</button>
                    </div>
                </div>
                @*</div>*@

            </div>

        </form>

    </div>

    @*<div class=" rowcol-sm-12">*@
    <div class="col-sm-12">
        <div id="ListViewModel" class="">
            <div id="DivAddRowTable">
                <table id="tblData" class="table table-striped ">
                    <thead>
                        <tr>

                            <th>Sunday</th>
                            <th>Monday</th>
                            <th>Tuesday</th>
                            <th>Wednesday</th>
                            <th>Thursday</th>
                            <th>Friday</th>
                            <th>Saturday</th>
                            <th>Code</th>
                            <th>@Resources.DisplayName_Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table><br />
            </div>
        </div>
    </div>
    @*</div>*@


    <div class="col-sm-12">

        <div class="form-group" style="margin-left:1%;">
            <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateOrderingAndDeliveryDayRecord" type="button" />
        </div>

    </div>

</div>


<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/bootstrap-select/dist/js/bootstrap-select.js")" type="text/javascript"></script>
<script src="~/Content/Theme/vendors/bower_components/typeahead.js/dist/typeahead.bundle.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        OrderingAndDeliveryDay.Initialize();
    });
</script>
