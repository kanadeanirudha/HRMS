@model AMS.ViewModel.GeneralCounterPOSAndPosOperatorViewModel
<div class="block-header">
    <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Manage Counter POS Applicable</h2>
</div>
<div class="card">
    <div class="card-header">
        <ul class="actions">
            <li class="dropdown">
                <a href="" data-toggle="dropdown">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li>
                        <a class="mfpAjaxModal" title="Add New" href="@Url.Action("Create", "GeneralCounterPOSApplicable")">
                            <i class="zmdi zmdi-plus-square"></i>&nbsp;Add New
                        </a>
                    </li>
                </ul>
        </ul>
    </div>
    <div class="card-body card-padding">
        <form class="row" role="form">
            @*@Html.HiddenFor(m=>m.CRMSaleEnquiryAccountMasterID)*@

            <div class="col-sm-4">
                <div class="select form-group fg-line">
                    
                    @Html.DropDownListFor(model => model.CentreCode, Model.ListGetAdminRoleApplicableCentreItems, "--------Select Centre-------", new { id = "CentreCode", @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = " Centre Name" })
                </div>
            </div>

            <div class="col-sm-2">
                <input type="button" value="@Resources.GlobalProperties_ShowList" class="btn btn-primary btn-sm m-t-5" id="btnShowList" />
            </div>
        </form>
    </div>
    <div class="bootgrid-header container-fluid" id="data-table-command-header">
        <div class="row">
            <div class="col-sm-12 actionBar">
                <div class="search form-group">
                    <div class="input-group">
                        <span class="zmdi icon input-group-addon glyphicon-search"></span>
                        <input type="text" id="UserSearch" placeholder="Search" class="search-field form-control">
                    </div>
                </div>
                <div class="actions btn-group">
                    @*   <button title="Refresh" type="button" class="btn btn-default">
                            <span class="zmdi icon zmdi zmdi-refresh zmdi-hc-fw"></span>
                        </button>*@
                    <div class="dropdown btn-group">
                        <button data-toggle="dropdown" type="button" class="btn btn-default dropdown-toggle">
                            <span class="dropdown-text" id="tblDisplayRowLength">@Resources.GlobalProperties_10</span> <span class="caret"></span>
                        </button>
                        <ul role="menu" style="cursor: pointer" id="showrecords" class="dropdown-menu pull-right">
                            <li class="active" aria-selected="true">
                                <a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_10">@Resources.GlobalProperties_10</a>
                            </li>
                            <li aria-selected="false">
                                <a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_25">@Resources.GlobalProperties_25</a>
                            </li>
                            <li aria-selected="false"><a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_50">@Resources.GlobalProperties_50</a></li>
                            @*<li aria-selected="false"><a class="dropdown-item dropdown-item-button" data-action="-1">All</a></li>*@
                        </ul>
                    </div>
                    <div class="dropdown btn-group">
                        <button data-toggle="dropdown" type="button" class="btn btn-default dropdown-toggle" aria-expanded="false">
                            <span class="dropdown-text">
                                <span class="zmdi icon zmdi-view-module"></span>
                            </span><span class="caret"></span>
                        </button>
                        <ul role="menu" id="toggleTableColumn" class="dropdown-menu pull-right">
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="0" name="Counter">
                                        Counter<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="1" name="DeviceCode">
                                        Device Code<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="2" name="DateFrom">
                                        Date From<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="3" name="DateUpto">
                                        Date Upto<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="4" name="Iscurrent">
                                        Is current<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="5" name="Action">
                                        @Resources.TableHeaders_Action<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table id="myDataTable" class="table table-striped table-vmiddle table-responsive ">
        <thead>
            <tr>
                @*<th>Unit</th>*@
                <th>Counter</th>
                <th>Device Code</th>
                <th>Date From</th>
                <th>Date Upto</th>
                <th>Is Current</th>

                <th width="15%" align="center">@Resources.TableHeaders_Action</th>
            </tr>
        </thead>
    </table>

</div>
<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/nouislider/distribute/jquery.nouislider.all.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>


<script type="text/javascript">

    $(document).ready(function () {
        var oTable;
        GeneralCounterPOSApplicable.Initialize();

        oTable = $('#myDataTable').DataTable({

            "bServerSide": true,
            "sAjaxSource": "GeneralCounterPOSApplicable/AjaxHandler",
            "bJQueryUI": true,
            "sScrollY": false,
            "bProcessing": true,
            "sPaginationType": "full_numbers",
            "oLanguage": {
                "sInfoEmpty": "No entries to show",
            },
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "CentreCode", "value": $("#CentreCode").val() });

            },
            "columnDefs": [
                              {
                                  "targets": 0,

                                  "data": null,
                                  "bSortable": true,
                                  "render": function (data, type, full, meta) {
                                      var result = "<p  style=' height:5px;padding-left:15px;'>" + data[2] + "</p>";
                                      return result;
                                  }
                              },

                               {
                                   "targets": 1,
                                   "bSortable": true,
                                   "data": null,
                                   "render": function (data, type, full, meta) {
                                       var result = "<p  style=' height:5px;padding-left:15px;'>" + data[3] + "</p>";
                                       return result;
                                   }
                               },
                              {
                                  "targets": 2,
                                  "bSortable": true,
                                  "data": null,
                                  "render": function (data, type, full, meta) {
                                      var result = "<p  style=' height:5px;padding-left:15px;'>" + data[4] + "</p>";
                                      return result;
                                  }
                              },
                               {
                                   "targets": 3,
                                   "bSortable": true,
                                   "data": null,
                                   "render": function (data, type, full, meta) {
                                       var result = "<p  style=' height:5px;padding-left:15px;'>" + data[5] + "</p>";
                                       return result;
                                   }
                               },

                               {
                                   "targets": 4,

                                   "bSortable": false,
                                   "data": null,
                                   "render": function (data, type, full, meta) {
                                       var chkStatus = '';
                                       if (data[6] == "True") {
                                           chkStatus = 'checked';
                                       }
                                       else {
                                           chkStatus = '';
                                       }
                                       //var result = "<p  style=''>" + '<input id="IsActive" class="CheckBox" type="checkbox" disabled ' + chkStatus + ' />' + "</p>";
                                       var result = "<p  class='checkbox' style='margin-left: 10%; margin-top: 0%;'>" + '<input id="IsActive"  type="checkbox" disabled ' + chkStatus + ' /><i class="input-helper"></i>' + "</p>";

                                       return result;
                                   }
                               },
                               {
                                   "targets": 5,
                                   "bSortable": false,
                                   "data": null,
                                   "render": function (data, type, full, meta) {
                                       var result = null, result1 = null, result2 = null;

                                       result1 = '@Html.ActionLink("Edit1", "Edit", new { ID = "ID1" }, new { @class = "mfpAjaxModal btn btn-default waves-effect" })';
                                       result1 = result1.replace('ID1', data[0]);
                                       result1 = result1.replace("Edit1", '<span class=\"zmdi zmdi-edit\" title =\"@Resources.ToolTip_Edit\"></span>');
                                       result2 = " <a href=\"javascript:void(0);\" data-toggle=\"tooltip\" class=\"btn btn-default waves-effect\" onclick=\"fancyBoxPopUpAjax('Delete Counter POS Applicable','Are you sure? want to delete this POS Applicable?','error','btn-danger','Yes!','/GeneralCounterPOSApplicable/Delete/" + data[0] + "','content','page-loader','GeneralCounterPOSApplicable')\"><span class=\"zmdi zmdi-delete\"></span></a>";

                                       result = result1 + result2;
                                       return result;

                                   }
                               },



            ],

            "drawCallback": function (settings) {
                var api = this.api();
                var rows = api.rows({ page: 'current' }).nodes();
                var last = null;
                var table = $('#myDataTable').dataTable();
                var groupArray = '';
                api.column(1, { page: 'current' }).data().each(function (group, i) {
                    var array = String(group).split(',');
                    if (last !== array[1]) {

                        $(rows).eq(i).before(

                             '<tr class="group"><td colspan="6" style="font-weight:bold;background-color:rgba(128,128,128,0.2);color:#000;font-size:12px;font-family: verdana;">' + array[1] + '</td>'
                           + '</tr>'

                        );
                        last = array[1];
                    }
                });
            }
        });

        DataTableSettings(oTable, 'myDataTable', 'toggleTableColumn');
    });


</script>


