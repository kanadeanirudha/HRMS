@model AERP.ViewModel.InventoryUoMGroupAndDetailsViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Uom Group</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>s
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateInventoryUoMGroup" role="form">
                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(model => model.GroupCode, new { })
                        @Html.TextBoxFor(model => model.GroupCode, new { maxlength = "20", @class = "form-control input-sm typeahead" })
                    </div>
                    @Html.ValidationMessageFor(model => model.GroupCode)
                </div>
                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(model => model.GroupDescription, new { })
                        @Html.TextBoxFor(model => model.GroupDescription, new { maxlength = "60", @class = "form-control input-sm typeahead" })
                    </div>
                    @Html.ValidationMessageFor(model => model.GroupDescription)
                </div>
                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(model => model.BaseUomCode, new { })
                        @Html.DropDownListFor(model => model.BaseUomCode, (SelectList)ViewBag.InventoryUoMMasterForUomCodeList, "---Select Uom Code ---", new { @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.BaseUomCode)
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateCreateInventoryUoMGroupRecord" type="button" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        InventoryUoMGroupAndDetails.Initialize();
    });
</script>

