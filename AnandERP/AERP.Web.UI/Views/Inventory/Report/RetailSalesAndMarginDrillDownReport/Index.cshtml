@model AMS.ViewModel.RetailSalesAndMarginDrillDownReportViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}
<script src="@Url.Content("~/Scripts/AMS_Scripts/Inventory_1/Reports/RetailSalesAndMarginDrillDownReport.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<div class="container">
    @using (Html.BeginForm("Index", "RetailSalesAndMarginDrillDownReport", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="block-header">
            <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp; Sales and Margin Report</h2>
        </div>
        <div class="card" style="margin-bottom: 0px;">
            <div class="card-body card-padding" style="padding-bottom:5%;">
                @Html.HiddenFor(m => m.IsPosted)
                @Html.HiddenFor(m => m.GeneralUnitsName)
                @Html.HiddenFor(m => m.CentreName)
                @Html.HiddenFor(m => m.GranularityName)
                <div class="row">
                    <div class="col-sm-6">
                        <div class="fg-line select form-group">
                            @Html.DropDownListFor(m => m.CentreCode, Model.ListGetAdminRoleApplicableCentreItems, "------Select Centre-------", new { @class = "form-control", data_toggle = "tooltip", data_placement = "top", data_original_title = "Centre *" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CentreCode)
                    </div>
                    @*<div class="col-sm-6">
                        <div class="fg-line select form-group">
                            @Html.DropDownListFor(m => m.GeneralUnitsID, Model.ListGetGeneralUnitsItems, new { @class = "form-control", data_toggle = "tooltip", data_placement = "top", data_original_title = "Site" })
                        </div>

                    </div>*@
                    <div class="col-sm-6">
                        <div class="fg-line select form-group">
                            @Html.DropDownListFor(m => m.Granularity, (SelectList)ViewBag.GranularityList, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Item Type*", @style = "margin-top:12px" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="fg-line form-group">
                            @Html.TextBoxFor(model => model.DateFrom, new { maxlength = "50", @class = "form-control input-sm " })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="fg-line form-group">
                            @Html.TextBoxFor(model => model.DateTo, new { maxlength = "50", @class = "form-control input-sm " })
                        </div>
                    </div>
                  
                    <div class="col-sm-2" style="margin-top:8px;">
                        <div class="fg-line">
                            <button type="submit" name="submit" id="btnRetailSalesAndMarginDrillDownReportubmit" class="btn-primary btn">Show</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

<div class="container" style="margin-top:-10px">

    <div id="aaa">
        <div class="card" style="overflow: auto;">
            <div class="card-body card-padding">
                @Html.Partial("/Views/Inventory_1/Report/RetailSalesAndMarginDrillDownReport/RetailSalesAndMarginDrillDownReport.aspx")

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        RetailSalesAndMarginDrillDownReport.Initialize();
    });
</script>
