@model AMS.ViewModel.RetailReportsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}
<script src="@Url.Content("~/Scripts/AMS_Scripts/Inventory_1/Reports/RetailReports.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<div class="container" style="padding-bottom:10px;">
    @using (Html.BeginForm("Index", "RetailReports", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="block-header">
            <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Sales Report</h2>
        </div>
        <div class="card" style="margin-bottom: 0px;">
            <div class="card-body card-padding" style="padding-bottom:10%;">
                @Html.HiddenFor(m => m.IsPosted)
                @Html.HiddenFor(m => m.GeneralUnitsName)
                @Html.HiddenFor(m => m.CentreName)
                @Html.HiddenFor(m => m.GranularityName)
                <div class="row col-sm-12">
                    <div class="col-sm-6">
                        <div class="fg-line select form-group">
                            @Html.DropDownListFor(m => m.CentreCode, Model.ListGetAdminRoleApplicableCentreItems, "------Select Centre-------", new { @class = "form-control", data_toggle = "tooltip", data_placement = "top", data_original_title = "Centre *" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CentreCode)
                    </div>
                    <div class="col-sm-6">
                        <div class="fg-line select form-group">
                            @Html.DropDownListFor(m => m.GeneralUnitsID, Model.ListGetGeneralUnitsItems, new { @class = "form-control", data_toggle = "tooltip", data_placement = "top", data_original_title = "Site" })
                        </div>

                    </div>

                </div>
                <div class="row col-sm-12">
                    <div class="col-sm-3">
                        <div class="fg-line form-group">
                            @Html.TextBoxFor(model => model.DateFrom, new { maxlength = "50", @class = "form-control input-sm " })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="fg-line form-group">
                            @Html.TextBoxFor(model => model.DateTo, new { maxlength = "50", @class = "form-control input-sm " })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="fg-line select form-group">
                            @Html.DropDownListFor(m => m.Granularity, (SelectList)ViewBag.GranularityList, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Item Type*" })
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="fg-line">
                            <button type="submit" name="submit" id="btnRetailReportSubmit" class="btn-primary btn">Show</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

<div class="container" style="margin-top:-10px">

    <div id="aaa">
        <div class="card" style="overflow :auto;">
            @*<div class="card-header"></div>*@
            <div class="card-body card-padding">
              @Html.Partial("/Views/Inventory_1/Report/RetailReports/RetailReportsDaily.aspx")
                @*@if (Model.Granularity == "1")
                {                                                                                                 
                    @Html.Partial("/Views/Inventory_1/Report/RetailReports/RetailReportsDaily.aspx")
                }
                else if (Model.Granularity == "2")
                {
                    @Html.Partial("/Views/Inventory_1/Report/RetailReports/RetailReportsWeekly.aspx");
                }
                else if (Model.Granularity == "3")
                {
                    @Html.Partial("/Views/Inventory_1/Report/RetailReports/RetailReportsMonthly.aspx");
                }
                else if (Model.Granularity == "4")
                {
                    @Html.Partial("/Views/Inventory_1/Report/RetailReports/RetailReportsYearly.aspx");
                }*@
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        RetailReports.Initialize();
    }); 
</script>
