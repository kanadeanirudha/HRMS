@model AMS.ViewModel.RetailReportsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}
<script src="@Url.Content("~/Scripts/AMS_Scripts/Inventory_1/Reports/SaleSummaryReport.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<div class="container">
    @using (Html.BeginForm("Index", "SaleSummaryReport", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="block-header">
            <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Sale Summary Report</h2>
        </div>
        <div class="card" style="margin-bottom: 0px;">
            <div class="card-body card-padding" style="padding-bottom:8%;">
                @Html.HiddenFor(m => m.IsPosted)
                @Html.HiddenFor(m => m.CentreName)
                <div class="row">
                    <div class="col-sm-3">
                        <div class="fg-line form-group">
                            @Html.LabelFor(model => model.CentreCode, new { })
                            @Html.DropDownListFor(model => model.CentreCode, Model.ListGetAdminRoleApplicableCentreItems, new { @class = "form-control input-sm AddGeneralUnitsID" })
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="fg-line form-group">
                            @Html.LabelFor(model => model.DateFrom, new { })
                            @Html.TextBoxFor(model => model.DateFrom, new { maxlength = "50", @class = "form-control input-sm " })
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="fg-line form-group">
                            @Html.LabelFor(model => model.DateTo, new { })
                            @Html.TextBoxFor(model => model.DateTo, new { maxlength = "50", @class = "form-control input-sm " })
                        </div>
                    </div>
                    <div class="col-sm-1" style="margin-top:27px;">
                        <div class="fg-line">
                            <button type="submit" name="submit" id="btnSalesSummarySubmit" class="btn-primary btn">Show</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

<div class="container" style="margin-top:-50px">

    <div id="aaa">
        <div class="card">
            @*<div class="card-header"></div>*@
            <div class="card-body card-padding">
                @Html.Partial("/Views/Inventory_1/Report/SaleSummaryReport/SaleSummaryReport.aspx")

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#DateFrom').datetimepicker({
            format: 'DD MMMM YYYY',
            ignoreReadonly: true,

        });
        $('#DateTo').datetimepicker({
            format: 'DD MMMM YYYY',
            ignoreReadonly: true,
        });

        SaleSummaryReport.Initialize();
    });
</script>
