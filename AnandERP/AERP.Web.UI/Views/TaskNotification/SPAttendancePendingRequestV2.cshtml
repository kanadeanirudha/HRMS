@model AERP.ViewModel.DashboardViewModel
<script src="@Url.Content("~/Scripts/AERP_Scripts/Dashboard/SPAttendancePendingRequestV2.js")" type="text/javascript"></script>

<button id="btnApprovedSpecialRequest" class="btn btn-success waves-effect" disabled="disabled">Approve</button>
<button id="btnRejectSpecialRequest" class="btn btn-danger  waves-effect" disabled="disabled">Reject</button>
<input type="hidden" id="taskcode" value="ASA" />

<div class="card">

    <table id="MyDataTablePendingRequest-ASA" class="table table-striped table-vmiddle table-responsive ">
        <thead>
            <tr>
                <th style="display: none"></th>
                <th class="center">
                    <input type="checkbox" class="checkall-user" name="checkbox12" disabled="disabled"></th>
                <th>@Resources.TableHeaders_Details </th>
                <th style="text-align: center;">Requested Date</th>
                <th style="text-align: center;">Request For</th>
                <th style="text-align: left;" class="">@Resources.TableHeaders_Status</th>
                <th style="border-top: 1px solid #bbb" class="center">@Resources.DisplayName_Actions</th>
            </tr>
        </thead>
    </table>

</div>
<script type="text/javascript">
    $(document).ready(function () {
        SPAttendancePendingRequestV2.Initialize();
        SPAttendancePendingRequestV2.CheckedAll();
        var isReloadedFromCookies;

        var oTable = $('#MyDataTablePendingRequest-ASA').dataTable({
            "bServerSide": true,
            "sAjaxSource": "TaskNotification/AjaxHandlerMyDataTablePendingLeaveAttendanceSpecialRequest",
            "bJQueryUI": true,
            "bProcessing": true,
            "order": [[3, "desc"]],
            "bAutoWidth": true,
            "iDisplayLength": 50,
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "TaskCode", "value": "ASA" });
            },
            "sPaginationType": "full_numbers",
            "oLanguage": {
                "sInfoEmpty": "No entries to show",
            },
            "columnDefs": [
                             {
                                 "targets": 0,
                                 "visible": false,
                             },
                             {
                                 "targets": 1,
                                 "bSortable": false,
                                 "data": null,
                                 "render": function (data, type, full, meta) {

                                     var TaskCode = 'ASA';
                                     var result = "<p  style='text-align: center; height:5px;'><input type='checkbox' class='check-user' name='checkbox12' value='" + data[2] + '~' + TaskCode + '~' + data[7] + '~' + data[4] + '~' + data[3] + '~' + data[5] + '~' + data[1] + '~' + data[6] + "'></p>";
                                     SPAttendancePendingRequestV2.CheckedSingle();
                                     $(".checkall-user").prop("disabled", false);
                                     return result;

                                 }
                             },
                            {
                                "targets": 2,
                                "bSortable": false,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result = "<p  style='height:5px;'>" + data[0] + "</p>";
                                    return result;
                                }
                            },
                            {
                                "targets": 3,
                                "bSortable": false,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result = "<p  style='height:5px;text-align: center'>" + data[11] + "</p>";
                                    return result;
                                }
                            },
                            {
                                "targets": 4,
                                "bSortable": false,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result = "<p  style='text-align: center; height:5px;'>" + data[12] + "</p>";
                                    return result;
                                }
                            },
                            {
                                "targets": 5,
                                "bSortable": false,
                                "orderable": false,

                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var chkStatus = '';
                                    if (data[1] == "1") {
                                        chkStatus = '@Resources.Displaychkstatus_Pending';
                                    }
                                    else if (data[1] == "2") {
                                        chkStatus = '@Resources.Displaychkstatus_Done';
                                    }
                                    else if (data[1] == "3") {
                                        chkStatus = '@Resources.Displaychkstatus_Reject';
                                    }
                                    var result = result = "<button class='btn bgm-orange btn-xs'>" + chkStatus + "</button>";

                                    return result;
                                }
                            },
                            {
                                "targets": 6,
                                "bSortable": false,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result1 = '@Html.ActionLink("PendingRequestApproval1", "PendingRequestApproval", new { TNDID = "TNDID1", TNMID = "TNMID1", NGTRDID = "NGTRDID1", MenuLink = "ML1", TaskCode = Model.TaskCode }, new { @class = "ajax  cboxElement" })';
                                    result1 = result1.replace('TNDID1', data[3]);
                                    result1 = result1.replace('TNMID1', data[4]);
                                    result1 = result1.replace('NGTRDID1', data[5]);
                                    result1 = result1.replace('ML1', data[2]);
                                    result1 = result1.replace("PendingRequestApproval1", '<i class="icon-file" title="@Resources.ToolTip_View"></i>');

                                    var TaskCode = "ASA";

                                    var result1 = '<a href="#" class="mfpAjaxModal btn btn-default waves-effect"><i class="zmdi zmdi-file"></i></a>';
                                    result1 = result1.replace("#", data[2] + "&TNDID=" + data[3] + "&TNMID=" + data[4] + "&GTRDID1=" + data[5] + "&TaskCode=" + TaskCode + "&StageSequenceNumber=" + data[6] + "&IsLast=" + data[7]);
                                    result1 = result1.replace('RequestApproval', 'RequestApprovalV2');
                                    var result2 = '<i class="zmdi zmdi-lock" title="@Resources.ToolTip_ApplicationIsTakenByAnotherApprover"></i>';

                                    if (data[9] == 'True') {
                                        if (data[10] == 'True') {
                                            var result = "<p style='text-align: center; height:5px;'>" + result1 + "</p>";
                                        }
                                        else {
                                            var result = "<p style='text-align: center; height:5px;'>" + result2 + "</p>";
                                        }
                                    }
                                    else {
                                        var result = "<p style='text-align: center; height:5px;'>" + result1 + "</p>";
                                    }
                                    return result;
                                }
                            }
            ]
        });

        DataTableSettings(oTable, "MyDataTablePendingRequest-ASA", "toggleTableColumn");
    });
</script>


