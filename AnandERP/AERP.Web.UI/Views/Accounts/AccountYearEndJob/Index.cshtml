@model AERP.ViewModel.AccountSessionMasterViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ListViewModel" class="container">
    <div id="custom-content">
        <div class="block-header">

            <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;Account Year End Job</h2>
        </div>
        <div class="card" style="width:75%">
            <div class="card-body card-padding">
                <div id="displayErrorMessage" role="alert" hidden class="alert">
                    <button class="close" type="button"><span aria-hidden="true">×</span></button>
                    <p id="messageContent"></p>
                </div>

                <form id="FormCreateAccountYearEndJob" role="form" class="row">
                    <div class="col-sm-12">
                        <div class="form-group  ">
                            <Label class="col-sm-2 control-label m-t-15">Current Year</Label>
                            <div class="col-sm-5">
                                <div class="fg-line">
                                    @Html.HiddenFor(model => model.CurrentYearSessionID)
                                    @Html.HiddenFor(model => model.OutPutFlag)
                                    @Html.TextBoxFor(model => model.CurrenntSessionYearFromDatetime, new { @class = "form-control input-sm", @readonly = "readonly", style = "background-color:#fff;", disabled = "disabled" })
                                </div>
                            </div>

                            <div class="col-sm-5">
                                <div class="fg-line">
                                    @Html.TextBoxFor(model => model.CurrenntSessionYearUptoDatetime, new { @class = "form-control input-sm", @readonly = "readonly", style = "background-color:#fff;", disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.OutPutFlag != 3)
                    { 
                    <div class="col-sm-12" style="margin-top:20px">

                        <div class="form-group  ">
                            <Label class="col-sm-2 control-label m-t-15">Next Year</Label>
                            <div class="col-sm-5">
                                <div class="fg-line">
                                    @Html.HiddenFor(model => model.NextYearSessionID)
                                    @Html.TextBoxFor(model => model.NextSessionYearFromDatetime, new { @class = "form-control input-sm", @readonly = "readonly", style = "background-color:#fff;", disabled = "disabled" })
                                </div>
                            </div>

                            <div class="col-sm-5">
                                <div class="fg-line">
                                    @Html.TextBoxFor(model => model.NextSessionYearUptoDatetime, new { @class = "form-control input-sm", @readonly = "readonly", style = "background-color:#fff;", disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                    <div class="col-sm-12" style="margin-top:20px">
                        @if (Model.OutPutFlag == 2)
                        {
                            <div class="checkbox m-b-15 m-l-15 m-t-20" style="float:left;">
                                <label>

                                    <input type="checkbox" id="IsCarryForward" checked>
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.IsCarryForward)
                                </label>
                            </div>
                        }
                        else
                        {
                            <div class="checkbox m-b-15 m-l-15 m-t-20" style="float:left;">
                                <label>

                                    <input type="checkbox" id="IsCarryForward">
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.IsCarryForward)
                                </label>
                            </div>
                        }
                        <div class="col-sm-7">
                            <div id="checkboxlist" class="form-group m-b-15 m-l-15">
                                <Label class="col-sm-4 control-label m-t-15">Balance Sheet</Label>
                                <div class="col-sm-8">
                                    <p id="e5_f">
                                        <select id="checkboxlist1" class="form-group selectpicker" multiple name="selectCent">
                                            @*data-live-search="true"*@
                                            @foreach (var item in Model.GetBalncesheetList)
                                            {
                                                <option id="@item.AccBalsheetMasterID" value="@item.AccBalsheetMasterID">@item.AccBalsheetHeadDesc</option>
                                            }
                                        </select>
                                    </p>
                                </div>
                            </div>
                        </div>
                        @if (Model.OutPutFlag != 3)
                        {
                            <div class="col-sm-2 pull-right m-t-15">
                                <button type="button" id="CreateAccountYearEndJobRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary">Submit</button>
                            </div>

                        }
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>
<script src="@Url.Content("~/Scripts/AERP_Scripts/Account/AccountYearEndJob.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Theme/vendors/bower_components/bootstrap-select/dist/css/bootstrap-select.css")" rel="stylesheet" type="text/css" />
@*<link href="@Url.Content("~/Content/jquery-ui.theme.css")" rel="stylesheet" type="text/css" />*@
