@model AERP.ViewModel.AccountGeneralLedgerReportViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/AERP_Scripts/Account/AccountGeneralLedgerReport.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
<div class="container">
  @using (Html.BeginForm("Index", "AccountGeneralLedgerReport", FormMethod.Post, new { enctype = "multipart/form-data", id = "AccountGeneralLedgerReport" }))
{
        <div class="block-header">
            <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Account General Ledger Report</h2>
        </div>

        <div class="card" style="margin-bottom: 0px;">
            <div class="card-body card-padding">
                @Html.HiddenFor(m => m.AccountBalsheetMstID)
                @Html.HiddenFor(m => m.AccountName)
                @Html.HiddenFor(m => m.IsPosted)
                <div class="row col-sm-12">
                    <div class="col-sm-6">
                        <div class="fg-line select form-group">
                            @Html.DropDownListFor(m => m.AccountSessionID, Model.AccountSessionMasterReportItems, "------Select Account Session-------", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Account Session" })
                        </div>
                        @Html.ValidationMessageFor(model => model.AccountSessionID)
                    </div>

                    <div class="col-sm-6">
                        <div class="fg-line select form-group">
                            @Html.DropDownList("ReportParameter", ViewData["ReportParameter"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Report Parameter" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ReportParameter)
                    </div>

                </div>
                <div class="row col-sm-12">
                    <div class="col-sm-3">
                        <div class="fg-line form-group">
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", ReadOnly = "True", data_toggle = "tooltip", @placeholder = "From date", data_placement = "top", data_original_title = "From Date", style = "background-color:white" })
                        </div>
                        @Html.ValidationMessageFor(model => model.FromDate)
                    </div>
                    <div class="col-sm-3">
                        <div class="fg-line form-group">
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", ReadOnly = "True", data_toggle = "tooltip", @placeholder = "To date", data_placement = "top", data_original_title = "To Date", style = "background-color:white" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ToDate)
                    </div>
                    <div class="col-sm-3">
                        <div class="fg-line select form-group">

                            @Html.DropDownList("AccountType", ViewData["AccountType"] as List<SelectListItem>, new { @class = "form-control", data_toggle = "tooltip", data_placement = "top", data_original_title = "Account Type" })
                        </div>
                        @Html.ValidationMessageFor(model => model.AccountType)
                    </div>
                    <div class="col-sm-3">
                        <div class="fg-line select form-group">
                           @Html.DropDownListFor(m => m.AccountID, Model.AccountNameReportItems, "------Select Account Name-------", new { @class = "form-control", data_toggle = "tooltip", data_placement = "top", data_original_title = "Account Name" })
                        </div>
                      @Html.ValidationMessageFor(model => model.AccountID)
                    </div>
                </div>                

                <div class="row" style="margin-left:1%;">
                    <button type="submit" id="btnAccountGeneralLedgerReportSubmit" name="submit" class="btn btn-primary">Show</button>
                </div>

            </div>
        </div>
    }

    <div id="aaa">
        <div class="card">
            <div class="card-header"></div>
            <div class="card-body card-padding">
                @Html.Partial("/Views/Accounts/Report/AccountGeneralLedgerReport/AccountGeneralLedgerReport.aspx")
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {       
        AccountGeneralLedgerReport.Initialize();
    });
</script>






