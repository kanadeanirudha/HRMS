@model AERP.ViewModel.AccountHeadMasterViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;Create Account Heads</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateAccountHeadMaster" role="form" class="row">
                <div class="row">
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.HeadName, new { })
                            @Html.TextBoxFor(model => model.HeadName, new { maxlength = "50", @class = "form-control input-sm " })

                        </div>
                        @Html.ValidationMessageFor(model => model.HeadName)
                    </div>
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                             @Html.LabelFor(model => model.HeadCode, new { })
                            @Html.TextBoxFor(model => model.HeadCode, new { maxlength = "", @class = "form-control input-sm " })

                        </div>
                        @Html.ValidationMessageFor(model => model.HeadCode)
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                             @Html.LabelFor(model => model.PrintingSequence, new { })
                            @Html.DropDownList("PrintingSequence", ViewData["PrintingSequence"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Printing Sequence*" })

                        </div>
                        @Html.ValidationMessageFor(model => model.PrintingSequence)
                    </div>
                    <div class="form-group col-sm-6">
                        <div class="form-group fg-line">
                             @Html.LabelFor(model => model.CreditDebitFlag, new { })
                            @Html.DropDownList("CreditDebitFlag", ViewData["CreditDebitFlag"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Credit Debit Flag*" })

                        </div>
                        @Html.ValidationMessageFor(model => model.CreditDebitFlag)
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <input class="btn btn-primary" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="CreateAccountHeadMasterRecord" type="button" />
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        AccountHeadMaster.Initialize();
    });
</script>

