@model AERP.ViewModel.AccountBalancesheetTypeMasterViewModel
<style>

    .mfp-content {
        width: 35% !important;
    }

    @@media (max-width:768px) {
        .mfp-content {
            width: 100% !important;
        }
    }
</style>

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Balance Sheet Type</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateAccountBalancesheetTypeMaster" class="row">

               @Html.AntiForgeryToken()
               @Html.ValidationSummary(true)

                
                <div class="col-sm-12">
                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    <div class="form-group  fg-line">
                        @Html.LabelFor(m => m.AccBalsheetTypeDesc, new {  })
                        @Html.TextBoxFor(model => model.AccBalsheetTypeDesc, new { maxlength = "50", @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.AccBalsheetTypeDesc)
                </div>

                <div class="col-sm-12">
                     <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    <div class="form-group fg-line">
                        @Html.LabelFor(m => m.AccBalsheetTypeCode, new {  })
                        @Html.TextBoxFor(model => model.AccBalsheetTypeCode, new { maxlength = "20", @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.AccBalsheetTypeCode)
                </div>
                <div class="col-sm-12" style="display:none;">
                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    <div class="form-group fg-line select">
                        @Html.LabelFor(m => m.AccBalsheetType, new { })
                        @Html.DropDownList("AccBalsheetType", ViewData["AccBalsheetType"] as List<SelectListItem>, new { maxlength = "20", @class = "form-control  input-sm" })
                    </div>
                </div>

                <div class="col-sm-12">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateAccountBalancesheetTypeMasterRecord" type="button" />
                    <input name="" id="reset" type="submit" class="btn btn-default m-t-10" value="Reset" />
                </div>
            </form>

        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        AccountBalancesheetTypeMaster.Initialize();
        //AccountBalancesheetType.Initialize();

    });
</script>