@model AERP.ViewModel.AccountChequeBookDetailsViewModel
<form id="FormEditInfoAccountChequeBookDetails" method="post">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div id="update-message" class="error invisible"></div>
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ChequeBookID)
    @Html.HiddenFor(model => model.AccountID)
    @Html.HiddenFor(model => model.AccountName)
    @Html.HiddenFor(model => model.ChequeNo)
    <div class="widget-block" style="width: auto; height: auto;">
        <div class="widget-head">
            <h5>Cheque Cancellation</h5>
        </div>
        <div class="widget-content">
            <div class="widget-box" style="padding: 15px">

                <div class="control-group control-label">
                    @Html.LabelFor(model => model.AccountName, new { style = "float:left;font-weight: bold;" })&nbsp;: &nbsp;<b>@Html.DisplayFor(model => model.AccountName, new { style = "font-weight: bold;" })</b>
                </div>
                <div class="control-group control-label">
                    @Html.LabelFor(model => model.ChequeNo, new { style = "float:left;font-weight: bold;" })&nbsp;: &nbsp;<b>@Html.DisplayFor(model => model.ChequeNo, new { style = "font-weight: bold;" })</b>
                </div>

                <div class="control-group control-label">
                    @Html.LabelFor(model => model.ChequeDescription, new { style = "font-Weight:Bold;" })

                    <div class="controls input-xlarge text-tip">
                        @Html.TextBoxFor(model => model.ChequeDescription, new { maxlength = "60", style = "font-weight: bold;" })
                        <br />
                        @Html.ValidationMessageFor(model => model.ChequeDescription)
                    </div>
                </div>


                <div class="form-actions" style="border: 1px solid #e5e5e5; text-align: right">
                    <input type="button" id="EditInfoAccountChequeBookDetailsRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />
                </div>

            </div>
        </div>

    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        AccountChequeBookDetails.Initialize();
    });
</script>

