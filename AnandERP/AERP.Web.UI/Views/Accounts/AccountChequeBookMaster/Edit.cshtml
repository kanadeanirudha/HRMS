@model AERP.ViewModel.AccountChequeBookMasterViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/fnReloadAjax.js")" type="text/javascript"></script>

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.ID)
@Html.HiddenFor(model => model.AccountID)
@Html.HiddenFor(model => model.AccBalsheetMstID)
@Html.HiddenFor(model => model.CentreCode)
<div id="update-message" class="error invisible"></div>
<div class="widget-block">
    <div class="widget-head">
        <h5>Update Account Cheque Book</h5>
    </div>

    <div class="widget-content">
        <form id="FormEditAccountChequeBookMaster" method="post" class="form-horizontal well">

            <div class="row">
                <div class="span9">
                    <div class="row control-group">
                        <div class="span">&nbsp;</div>
                        <div class="spanFullName span1">
                            @Html.LabelFor(model => model.AccountName, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span3">
                            <b>@Html.DisplayFor(model => model.AccountName)</b>
                        </div>
                        <div class="spanFullName span2">
                          
                            @Html.LabelFor(model => model.SelectedBalanceSheet, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                             <b>@Html.DisplayFor(model => model.SelectedBalanceSheet)</b>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="span9">
                    <div class="row control-group">
                        <div class="span">&nbsp;</div>
                        <div class="spanFullName span1">
                           @* <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>*@
                            @Html.LabelFor(model => model.ChequeFromNo, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span3">
                             @if (Model.ChequeFromNo == 0)
                            {
                                @Html.TextBoxFor(model => model.ChequeFromNo, new { maxlength = "50", tabindex = "0", style = "font-Weight:Bold;",min="1" })
                                <br />
                                @Html.ValidationMessageFor(model => model.ChequeFromNo)
                                
                            }
                            else
                            {
                                @Html.TextBoxFor(model => model.ChequeFromNo, new { maxlength = "50",style = "font-Weight:Bold;", @readonly = "readonly" })
                                <br />
                                @Html.ValidationMessageFor(model => model.ChequeFromNo)
                                   
                            }
                        </div>
                        <div class="spanFullName span2">
                          @*  <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>*@
                            @Html.LabelFor(model => model.ChequeToNo, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(m => m.ChequeToNo, new { style = "font-weight:bold",  maxlength = "50", @readonly = "readonly" })
                           @* <br />
                            @Html.ValidationMessageFor(m => m.ChequeToNo)*@
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="span9">
                    <div class="row control-group">
                        <div class="span">&nbsp;</div>
                        <div class="spanFullName span1">
                         @*   <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>*@
                            @Html.LabelFor(model => model.TotalNoCheque, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span3">
                             @Html.TextBoxFor(m => m.TotalNoCheque, new { style = "font-weight:bold",  maxlength = "50",min="1", @readonly = "readonly" })
                            <br />
                            @Html.ValidationMessageFor(m => m.TotalNoCheque)
                        </div>
                        <div class="spanFullName span2">
                            @Html.LabelFor(model => model.IsActive, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                          @Html.EditorFor(model => model.IsActive)
                            <br />
                            @Html.ValidationMessageFor(model => model.IsActive)
                        </div>
                    </div>

                </div>
            </div>

            <div class="form-actions" style="padding-left: 0px; padding-bottom: 0px; text-align: right">
                <input id="EditAccountChequeBookMasterRecord" type="button" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        AccountChequeBookMaster.Initialize();
    });
</script>

<style>
    .span1 {
        width: 90px;
    }

    .span2 {
        width: 90px;
    }
</style>
