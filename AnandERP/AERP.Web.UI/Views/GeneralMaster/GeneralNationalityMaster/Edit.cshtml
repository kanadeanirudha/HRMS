@model AERP.ViewModel.GeneralNationalityMasterViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Update Nationality</h2>
    </div>
    
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:200px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormEditGeneralNationalityMaster">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.CreatedBy)
                @Html.HiddenFor(model => model.CreatedDate)

            @if (Model.IsUserDefined == true)
            { 
                <div class="col-sm-12">
                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    @Html.LabelFor(model => model.Description, new { style = "" })
                    <div class="form-group  fg-line">
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", maxlength = "100", minlength = "2" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Description)
                </div>

                if (Model.GeneralNationalityMasterDTO.DefaultFlag)
                {
                        <div class="col-sm-6">
                            <div class="checkbox m-b-15" style="padding-top:8%;">
                                <label>
                                    <input type="checkbox" id="DefaultFlag" checked>
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.DefaultFlag)
                                </label>
                            </div>
                            @Html.ValidationMessageFor(model => model.DefaultFlag)
                        </div>
                }
                else { 
                        <div class="col-sm-6">
                            <div class="checkbox m-b-15" style="padding-top:8%;">
                                <label>
                                    <input type="checkbox" id="DefaultFlag">
                                    <i class="input-helper"></i>
                                    @Html.LabelFor(model => model.DefaultFlag)
                                </label>
                            </div>
                            @Html.ValidationMessageFor(model => model.DefaultFlag)
                        </div>
                }
                <div class="col-sm-12">
                    <div class="form-group" style="margin-left: 2%; ">
                        <button type="button" id="EditGeneralNationalityMasterRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                    </div>
                </div>
            }
            else { 
                
                    <div class="col-sm-12">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(model => model.Description, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", maxlength = "100", minlength = "2" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                
                    if (Model.GeneralNationalityMasterDTO.DefaultFlag)
                    {
                            <div class="col-sm-6">
                                <div class="checkbox m-b-15" style="padding-top:8%;">
                                    <label>
                                        <input type="checkbox" id="DefaultFlag" checked>
                                        <i class="input-helper"></i>
                                        @Html.LabelFor(model => model.DefaultFlag)
                                    </label>
                                </div>
                                @Html.ValidationMessageFor(model => model.DefaultFlag)
                            </div>
                    }
                    else { 
                            <div class="col-sm-6">
                                <div class="checkbox m-b-15" style="padding-top:8%;">
                                    <label>
                                        <input type="checkbox" id="DefaultFlag">
                                        <i class="input-helper"></i>
                                        @Html.LabelFor(model => model.DefaultFlag)
                                    </label>
                                </div>
                                @Html.ValidationMessageFor(model => model.DefaultFlag)
                            </div>
                    }
                    
                    <div class="col-sm-12">
                        <div class="form-group" style="margin-left: 2%; ">
                            <button type="button" id="EditGeneralNationalityMasterRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                        </div>
                    </div>
            }
            </form>

        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralNationalityMaster.Initialize();
    });
</script>