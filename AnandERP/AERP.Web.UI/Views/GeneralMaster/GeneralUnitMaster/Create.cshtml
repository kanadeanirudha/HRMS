@model AERP.ViewModel.GeneralUnitMasterViewModel

<form id="FormCreateGeneralUnitMaster" method="post">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ID)
    <div id="update-message" class="error invisible"></div>

    <div class="widget-block">
        <div class="widget-head">
            <h5>Create Unit</h5>
        </div>
        <div class="widget-content">
            <div class="widget-box" style="padding: 15px">
                <div class="control-group control-label">
                    @Html.LabelFor(model => model.UnitDescription, new { style = "font-Weight:Bold;" })

                    <div class="controls input-xlarge text-tip">
                        @Html.TextBoxFor(model => model.UnitDescription, new { maxlength = "50" })
                        <br />
                            @Html.ValidationMessageFor(model => model.UnitDescription)
                    </div>
                </div>

                <div class="control-group control-label">
                    @Html.LabelFor(model => model.ShortCode, new { style = "font-Weight:Bold;" })

                    <div class="controls input-xlarge text-tip">
                        @Html.TextBoxFor(model => model.ShortCode, new { maxlength = "15" })
                        <br />
                            @Html.ValidationMessageFor(model => model.ShortCode)
                    </div>
                </div>
           

        <div class="form-actions" style="border: 1px solid #e5e5e5;text-align:right">
            @*<button id="CreateGeneralCategoryMasterRecord" type="button" value="@Resources.ButtonAction_Submit" class="btn btn-primary"></button>*@
            <input type="button" id="CreateGeneralUnitMasterRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />
            <input name="" id="reset" type="submit" class="btn btn-primary" value="@Resources.ButtonAction_Reset" />
        </div>


</form>

<script type="text/javascript">
    $(document).ready(function () {
        GeneralUnitMaster.Initialize();
    });
</script>

