@model AERP.ViewModel.GeneralUnitMasterViewModel
<div class="container-fluid">
    <ul class="breadcrumb">
        <li><a href="#"></a><span class="divider">»</span></li>
        <li class="active">General Unit Master</li>
    </ul>

    <div class="row-fluid">
        <div class="span12">
            <div class="widget-block">

                @*////////////// Add below link for calling colorbox //////////////////////////
                    //////////////// Make it mnvisibale////////////////////////////////////////////*@
                <div style="display:none"> @Html.ActionLink("Create New", "Create", new { id = 0 }, new { @class = "ajax", title = "Create" })</div>

                <div class="widget-head">
                    <h5 id="hFive"><i class="black-icons users"></i> &nbsp; General Unit Master</h5>
                    <div class="pull-right" style="margin: -24px 60px 0px 10px;">
                        <div class="input-append" id="" style="float: right;">
                            <div style="display: none;">
                                <input type="hidden" name="_method" value="POST">
                            </div>
                            <div>
                                <select name="data[User][searchby]" class="" id="showrecord" tabindex="16" style="float: left;">
                                    <option value="10">@Resources.GlobalProperties_ShowRecords</option>
                                    <option value="10">10</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select>
                                &nbsp;&nbsp;
                                <input type="text" name="data[User][search]" class="search_query input-medium" placeholder="@Resources.GlobalProperties_Search..." size="16" autocomplete="off" id="UserSearch">
                                <button class="btn" type="button" id="searchBtn"><i class="icon-search"></i></button>
                            </div>

                            <div class="widget-control pull-right">
                                <a href="#" data-toggle="dropdown" class="btn dropdown-toggle"><i class="icon-plus"></i></a>
                                <ul class="dropdown-menu">
                                    <li><a class="ajax cboxElement" href="@Url.Action("Create", "GeneralUnitMaster")">  <h6 style="color:#000;"><i class="icon-plus" style="padding-left:7px;"></i>@Resources.DisplayName_AddNew</h6></a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="widget-content">
                    <div class="widget-box">
                        <div id="DataTables_Table_1_wrapper" class="dataTables_wrapper" role="grid">
                            <div class="table_content">
                                <table id="myDataTable" class="table table-striped table-bordered ">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">
                                                Unit Description
                                            </th>
                                            <th style="text-align:center">
                                                Short Code
                                            </th>

                                            <th style="text-align: center; width: 30px; line-height: 40px">@Resources.TableHeaders_Action</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="widget-bottom">
                                <br>
                                <br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralUnitMaster.Initialize();
        var oTable = $('#myDataTable').dataTable({
            "bServerSide": true,
            "sAjaxSource": "GeneralUnitMaster/AjaxHandler",
            "bJQueryUI": true,
            "sScrollY": false,
            "bProcessing": true,
            "sPaginationType": "full_numbers",
            "oLanguage": {
                "sInfoEmpty": "No entries to show",
            },
            "columnDefs": [

                              {
                                  "targets": 0,
                                  "bSearchable": true,
                              },
                                {
                                    "targets": 1,
                                    "bSearchable": true,
                                },


                            {
                                "targets": 2,
                                "bSortable": false,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result1 = '@Html.ActionLink("Edit1", "Edit", new { ID = '1' }, new { @class = "ajax  cboxElement" })';
                                    result1 = result1.replace('1', data[2]);
                                    result1 = result1.replace("Edit1", '<i class="icon-edit" title="@Resources.ToolTip_Edit"></i>');

                                    var result2 = '@Html.ActionLink("Delete1", "Delete", new { ID = '1' }, new { @class = "ajax  cboxElement" })';
                                    result2 = result2.replace('1', data[2]);
                                    result2 = result2.replace("Delete1", '<i class="icon-trash" title="@Resources.ToolTip_Delete"></i>');

                                    var result = "<p  style='text-align: center; height:5px;'>" + result1 + "&nbsp;|&nbsp; " + result2 + "</p>";
                                    return result;
                                }
                            }
            ]
        });
    });
</script>








