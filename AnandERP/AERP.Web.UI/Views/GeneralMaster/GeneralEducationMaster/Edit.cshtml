@model AERP.ViewModel.GeneralEducationMasterViewModel

<div id="custom-content">
@if (Model.IsUserDefined == true) { 
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Update Qualification</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormEditGeneralEducationMaster">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.EducationTypeID, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownListFor(model => model.EducationTypeID, (SelectList)ViewBag.GeneralEducationTypeMaster, "----Select Qualification Type----", new { @class = "form-control", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.EducationTypeID)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.Description, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", style = "", maxlength = "60" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.NumberOfYears, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.NumberOfYears, new { @class = "form-control", style = "", maxlength = "2", minlength = "1" })
                        </div>
                        @Html.ValidationMessageFor(model => model.NumberOfYears)
                    </div>

                    <div class="col-sm-6" style="display:none;">
                        @Html.LabelFor(m => m.Unit, new { style = "" })
                        <div class="form-group fg-line select">
                            @Html.TextBoxFor(model => model.Unit, new { @class = "form-control", style = ""})
                        </div>
                        @Html.ValidationMessageFor(model => model.Unit)
                    </div>
                </div>

                <div class="form-group" style="margin-left: 2%; ">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="EditGeneralEducationMasterRecord" type="button" />
                </div>
            </form>

        </div>
    </div>

    } 
    else { 
    
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;View</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.EducationTypeID, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownListFor(model => model.EducationTypeID, (SelectList)ViewBag.GeneralEducationTypeMaster, "----Select Education Type----", new { @class = "form-control", style = "background-color:#fff;", ReadOnly = "True", })
                        </div>
                        @Html.ValidationMessageFor(model => model.EducationTypeID)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.Description, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control",  maxlength = "60",style = "background-color:#fff;", ReadOnly = "True" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.NumberOfYears, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.NumberOfYears, new { @class = "form-control",  maxlength = "2", minlength = "1", style = "background-color:#fff;", ReadOnly = "True" })
                        </div>
                        @Html.ValidationMessageFor(model => model.NumberOfYears)
                    </div>

                    <div class="col-sm-6" style="display:none;">
                        @Html.LabelFor(m => m.Unit, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.TextBoxFor(model => model.Unit, new { @class = "form-control", style = "background-color:#fff;", ReadOnly = "True" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Unit)
                    </div>
                </div>

                
            </form>

        </div>
    </div>
    }
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralEducationMaster.Initialize();
    });
</script>
