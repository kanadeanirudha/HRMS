@model AERP.ViewModel.PurchaseInvoiceViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    .mfp-content {
        width: 70%;
    }
</style>
<script src="@Url.Content("~/Scripts/AERP_Scripts/Purchase/PurchaseInvoice.js")" type="text/javascript"></script>
<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Manage Invoice</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-header">
            <ul class="actions"  id="directPurchaseorder">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            <a class="mfpAjaxModal" title="Add New" href="@Url.Action("CreatePurchaseInvoice", "PurchaseInvoice")">
                                <i class="zmdi zmdi-plus-square"></i>&nbsp;Add New
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="card-body card-padding">
            <form class="row" role="form">
                <div class="col-sm-5">
                    <div class="select form-group fg-line">
                        @Html.DropDownList("PurchaseOrderType", ViewData["PurchaseOrderType"] as List<SelectListItem>, new { @class = "form-control input-sm" })
                    </div>
                </div>
                @*<div class="col-sm-5">
                    <div class="select form-group fg-line">
                        @Html.TextBoxFor(model => model.PurchaseOrderDate, new { @class = "form-control input-sm", Value = "" + DateTime.Now.ToString("d MMM yyyy") + "" })

                    </div>
                </div>*@
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" id="btnShowList">@Resources.GlobalProperties_ShowList</button>

                </div>
            </form>
        </div>
    </div>

    <div id="ListViewModel"> </div>
</div>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
<script src="~/Content/Theme/vendors/bower_components/typeahead.js/dist/typeahead.bundle.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#PurchaseOrderDate").datetimepicker({
            format: 'DD MMM YYYY',
            maxDate: moment()
        });
        PurchaseInvoice.Initialize();
        //PurchaseInvoice.LoadList();
    });
</script>
