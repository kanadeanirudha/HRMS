@model AMS.ViewModel.PurchaseReportMasterViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}
<script src="@Url.Content("~/Scripts/AMS_Scripts/Purchase/Reports/ItemOrderStatusReport.js")" type="text/javascript"></script>
<div class="container">
    @using (Html.BeginForm("Index", "ItemOrderStatusReport", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="block-header">
            <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Item Order Status Reports</h2>
        </div>
        <div class="card" style="margin-bottom: 0px;">
            <div class="card-body card-padding" style="padding-bottom:5%;">
                @Html.HiddenFor(model => model.IsPosted)
                @Html.HiddenFor(model => model.CentreName)
                @Html.HiddenFor(model => model.GeneralUnitsName)

                <div class="row col-sm-12">
                    <div class="col-sm-4">
                        <div class="fg-line select form-group">
                            @Html.DropDownListFor(m => m.CentreCode, Model.ListGetAdminRoleApplicableCentreItems, "------Select Centre-------", new { @class = "form-control", data_toggle = "tooltip", data_placement = "top", data_original_title = "Centre *" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CentreCode)
                    </div>
                    <div class="col-sm-4">
                        <div class="fg-line select form-group">
                            @Html.DropDownListFor(model => model.GeneralUnitsID, Model.ListGetGeneralUnitsItems, "------Select Unit-------", new { @class = "form-control input-sm AddGeneralUnitsID", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Units Type*" })
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="fg-line">
                            <button type="submit" name="submit" id="btnItemOrderStatusReportSubmit" class="btn-primary btn">Show</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>


<div class="container">
    @*<div class="block-header">
            <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Inventory Article Expiry Report</h2>
        </div>*@
    <div id="aaa">
        <div class="card">
            <div class="card-header"></div>
            <div class="card-body card-padding">
                @Html.Partial("/Views/Purchase/Report/ItemOrderStatusReport/ItemOrderStatusReport.aspx")
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        ItemOrderStatusReport.Initialize();

    });
</script>

