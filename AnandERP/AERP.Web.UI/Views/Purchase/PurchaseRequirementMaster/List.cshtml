        <table id="myDataTable" class="table table-striped table-vmiddle table-responsive ">
            <thead>
                <tr>
                    <th>Requirment No </th>
                    <th>Date</th>
                    <th>Department</th>
                    <th>Status</th>
                    <th>Item Count</th>
                    <th>DepartmentID</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
