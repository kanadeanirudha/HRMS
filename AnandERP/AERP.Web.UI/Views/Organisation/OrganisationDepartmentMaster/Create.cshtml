@model AERP.ViewModel.OrganisationDepartmentMasterViewModel

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Department</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateOrganisationDepartmentMaster">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.DepartmentName, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control", Maxlength = "60", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DepartmentName)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.DeptShortCode, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.DeptShortCode, new { @class = "form-control", Maxlength = "4", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DeptShortCode)
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.PrintShortDesc, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.PrintShortDesc, new { @class = "form-control", Maxlength = "50", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.PrintShortDesc)
                    </div>

                    @*<div class="col-sm-6">
                        @Html.LabelFor(model => model.AcademicNonacademic, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownList("AcademicNonacademic", ViewData["AcademicNonacademic"] as List<SelectListItem>, "----Select Academic----", new { @class = "form-control", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.AcademicNonacademic)
                    </div>*@
                </div>


                <div class="form-group" style="margin-left: 2%; ">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateOrganisationDepartmentMasterRecord" type="button" />
                    <input name="" id="reset" type="submit" class="btn btn-default" value="@Resources.ButtonAction_Reset" />
                </div>
            </form>

        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        OrganisationDepartmentMaster.Initialize();
    });
</script>













